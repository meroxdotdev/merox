---
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { getRecentPosts, getCombinedReadingTime } from '@/lib/data-utils'
import { cn, formatDate, getTagVariant } from '@/lib/utils'
import { SOCIAL_LINKS, ICON_MAP, SITE } from '@/consts'
import type { SocialLink } from '@/types'

let latestPosts: Awaited<ReturnType<typeof getRecentPosts>> = []
let postsWithReadingTime: Array<Awaited<ReturnType<typeof getRecentPosts>>[0] & { readingTime: string }> = []
try {
  latestPosts = await getRecentPosts(3)
  postsWithReadingTime = await Promise.all(
    latestPosts.map(async (post) => ({
      ...post,
      readingTime: await getCombinedReadingTime(post.id)
    }))
  )
} catch (error) {
  console.error('Error fetching recent posts:', error)
}

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Robert Melcher",
  "alternateName": "merox",
  "url": SITE.href,
  "image": new URL('/reworkedmeroxdc1.webp', Astro.site).href,
  "jobTitle": "HPC System Administrator",
  "worksFor": { "@type": "Organization", "name": "Forvia" },
  "sameAs": ["https://github.com/meroxdotdev", "https://www.linkedin.com/in/robert-melcher-92a1a9157"],
  "description": SITE.description
}

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": SITE.title,
  "url": SITE.href,
  "logo": new URL('/reworkedmeroxdc1.webp', Astro.site).href,
  "description": SITE.description,
  "founder": { "@type": "Person", "name": "Robert Melcher" }
}

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": SITE.title,
  "url": SITE.href,
  "description": SITE.description,
  "author": { "@type": "Person", "name": "Robert Melcher" },
  "potentialAction": {
    "@type": "SearchAction",
    "target": { "@type": "EntryPoint", "urlTemplate": `${SITE.href}/blog?q={search_term_string}` },
    "query-input": "required name=search_term_string"
  }
}
---

<Layout class="max-w-4xl" transition:persist="home-layout">
  <PageHead slot="head" title="Merox - Insights from my tech journey" fullTitle={true} />

  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  
  <link rel="preload" as="image" href="/meroxindc1.webp" type="image/webp" fetchpriority="high" media="(min-width: 768px)" />
  
  <style>
    .hero-glow { animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite; }
    .status-dot {
      display: inline-block;
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background-color: rgb(34, 197, 94);
      animation: status-pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    @keyframes status-pulse {
      0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7); opacity: 1; }
      50% { box-shadow: 0 0 0 4px rgba(34, 197, 94, 0); opacity: 0.8; }
    }
    @media (prefers-reduced-motion: reduce) {
      .hero-glow, .status-dot { animation: none; }
    }
  </style>

  <section class="hero-section relative pt-4 pb-8 md:pt-12 md:pb-20" transition:animate="none">
    <div class="flex flex-col-reverse md:flex-row items-center gap-6 md:gap-8">
      <div class="flex-1 space-y-6 text-center md:text-left">
        <div class="space-y-4">
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-black tracking-tighter uppercase leading-[0.9] text-balance">
            Building<br />infrastructure<br /><span class="text-primary">that scales</span>.
          </h1>
          <p class="text-base md:text-lg text-muted-foreground leading-relaxed max-w-lg mx-auto md:mx-0">
            System Administrator and former Cybersecurity Engineer with expertise in Linux-based technologies, networking, and security.
          </p>
        </div>

        <div class="flex flex-col items-center md:items-start gap-6">
          <div class="flex flex-wrap justify-center md:justify-start items-center gap-3">
            <Link href="/blog" class={buttonVariants({ variant: 'default', size: 'lg', class: 'rounded-full px-6 h-12 text-sm font-bold shadow-lg shadow-primary/20 hover:shadow-primary/30 transition-all hover:-translate-y-0.5 active:scale-95' })}>
              Read the blog
              <Icon name="lucide:arrow-right" class="ml-2 size-4" aria-hidden="true" />
            </Link>
            <Link href="/about" class={buttonVariants({ variant: 'outline', size: 'lg', class: 'rounded-full px-6 h-12 text-sm font-bold hover:bg-muted transition-all hover:-translate-y-0.5 active:scale-95' })}>
              About me
            </Link>
          </div>
          
          <nav aria-label="Social links">
            <ul class="flex items-center gap-1.5" role="list">
              {SOCIAL_LINKS.map(({ href, label }: SocialLink) => (
                <li>
                  <Link href={href} aria-label={label} title={label} class="group p-2.5 rounded-full hover:bg-primary/10 transition-all duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" external={href.startsWith('http') || href.startsWith('mailto:')}>
                    <Icon name={ICON_MAP[label as keyof typeof ICON_MAP] || 'lucide:message-circle-question'} class="size-5 text-muted-foreground group-hover:text-primary transition-colors" aria-hidden="true" />
                    <span class="sr-only">{label}</span>
                  </Link>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      </div>
      
      <div class="relative flex-shrink-0 w-full max-w-[160px] md:max-w-none md:w-[220px] lg:w-[250px]">
        <div class="hero-glow absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full bg-primary/5 rounded-full blur-[60px] md:blur-[80px] -z-10" aria-hidden="true"></div>
        <picture>
          <source srcset="/meroxindc1.webp" type="image/webp" />
          <img src="/meroxindc1.webp" alt="Robert Melcher" width="320" height="400" loading="eager" decoding="async" class="w-full h-auto" />
        </picture>
      </div>
    </div>
  </section>

  {postsWithReadingTime && postsWithReadingTime.length > 0 && (
    <section class="mt-8 pt-8 relative">
      <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-border/40 to-transparent"></div>
      <div class="mb-6">
        <h2 class="text-2xl font-black tracking-tighter uppercase leading-none text-foreground">
          Latest <span class="text-primary">Insights</span>
        </h2>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {postsWithReadingTime.map((post) => (
          <Link
            href={`/${post.collection}/${post.id}`}
            class="group block p-[1.575rem] rounded-lg border border-border/50 hover:border-border bg-card/50 hover:bg-card transition-all duration-200 hover:shadow-sm h-full flex flex-col"
          >
            <div class="space-y-[1.125rem] flex-1 flex flex-col">
              <h3 class="text-sm font-bold leading-tight text-foreground group-hover:text-primary transition-colors line-clamp-2">
                {post.data.title}
              </h3>
              <p class="text-xs text-muted-foreground/70 leading-relaxed line-clamp-4 flex-1">
                {post.data.description}
              </p>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex flex-wrap items-center gap-1.5">
                  {post.data.tags.slice(0, 2).map((tag) => {
                    const { className } = getTagVariant(tag)
                    return (
                      <span class={cn(
                        "px-1.5 py-0.5 rounded-md bg-muted/50 text-[10px] tracking-wide transition-colors",
                        className
                      )}>
                        {tag}
                      </span>
                    )
                  })}
                </div>
              )}
              <div class="flex items-center gap-2 text-xs text-muted-foreground/50 pt-1">
                <time datetime={post.data.date.toISOString()}>
                  {formatDate(post.data.date)}
                </time>
                <span aria-hidden="true">Â·</span>
                <span class="flex items-center gap-1">
                  <Icon name="lucide:clock" class="size-3" />
                  {post.readingTime}
                </span>
              </div>
            </div>
          </Link>
        ))}
      </div>
      <div class="mt-6 flex justify-center">
        <Link href="/blog" class={buttonVariants({ variant: 'outline', size: 'default', class: 'w-auto' })}>
          Show more
        </Link>
      </div>
    </section>
  )}
</Layout>
