---
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Skills from '@/components/react/Skills'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { getRecentPosts } from '@/lib/data-utils'
import { Image } from 'astro:assets'
import { formatDate } from '@/lib/utils'

// Error handling for fetching recent posts
let latestPosts: Awaited<ReturnType<typeof getRecentPosts>> = []
try {
  latestPosts = await getRecentPosts(2)
} catch (error) {
  console.error('Error fetching recent posts:', error)
  // Continue with empty array - page will still render
}
const highlights = [
  'HPC @ Forvia: Full InfiniBand clusters + PBS scheduling',
  'Dolphost Founder: Secure VPS & WordPress hosting',
  'Cybersecurity @ Atos: Nessus, Palo Alto/Fortinet and Forescout configurations',
  'SysAdmin @ Netex: Migrated bare-metal Puppet to Kubernetes',
]
---
<Layout class="max-w-3xl">
  <PageHead slot="head" title="Merox - Insights from my tech journey" fullTitle={true} />
  
  <!-- Preload LCP image for faster loading -->
  <link rel="preload" as="image" href="/static/homelab.webp" type="image/webp" fetchpriority="high" />
  <link rel="preload" as="image" href="/static/homelab.png" type="image/png" fetchpriority="high" />

  <!-- Hero with homelab background -->
  <section class="relative overflow-hidden rounded-xl border">
    <!-- Optimized Background Image with WebP support -->
    <picture class="absolute inset-0 z-0 pointer-events-none">
      <source type="image/webp" srcset="/static/homelab.webp" />
      <img
        src="/static/homelab.png"
        alt=""
        class="absolute inset-0 w-full h-full object-cover parallax-bg"
        fetchpriority="high"
        decoding="async"
        aria-hidden="true"
      />
    </picture>
    
    <!-- Gradient Overlay for text readability -->
    <div class="absolute inset-0 z-[1] bg-gradient-to-br from-background/85 via-background/75 to-background/65 dark:from-background/90 dark:via-background/85 dark:to-background/80"></div>
    
    <!-- Edge fade for better visual flow -->
    <div class="absolute inset-0 z-[1] bg-gradient-to-t from-background/40 via-transparent to-transparent"></div>

    <!-- Content Container -->
    <div class="relative z-10 p-8 md:p-10">
      <div class="flex flex-col-reverse gap-6 sm:flex-row sm:items-start sm:justify-between">
        <div class="flex-1 min-w-0">
          <div class="inline-block mb-3">
            <span class="text-xs font-medium uppercase tracking-wider text-primary px-3 py-1 rounded-full bg-primary/10 border border-primary/20">
              HPC System Administrator
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl leading-tight font-bold tracking-tight">
            Building infrastructure<br/>that scales.
          </h1>
          <p class="text-muted-foreground mt-4 leading-relaxed text-base md:text-lg">
            DevOps-focused HPC System Administrator with 9+ years in IT, including 2 years as a Cybersecurity Engineer.
          </p>
          <div class="mt-6 flex flex-wrap items-center gap-3">
            <Link href="/blog" class={buttonVariants({ variant: 'default', size: 'lg' })}>
              Read the blog
            </Link>
            <Link href="/about" class={buttonVariants({ variant: 'outline', size: 'lg' })}>
              About me
            </Link>
          </div>
        </div>
        <div class="relative flex-shrink-0">
          <img
            src="/reworkedmeroxdc1.webp"
            alt="Robert Melcher, HPC System Administrator"
            width="112"
            height="112"
            loading="eager"
            fetchpriority="high"
            class="w-28 h-28 rounded-full object-cover border-4 border-background shadow-xl ring-2 ring-primary/10 dark:ring-primary/20"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Skills & Technologies -->
  <section class="mt-8">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Skills & Technologies</h2>
      <p class="text-sm text-muted-foreground">
        Core competencies across systems administration, security, and infrastructure automation
      </p>
    </div>
    <ErrorBoundary client:load>
      <Skills client:load />
    </ErrorBoundary>
  </section>

  <!-- Latest from the blog -->
  {latestPosts && latestPosts.length > 0 && (
    <section class="mt-12">
      <div class="mb-8 flex items-center justify-between">
        <div>
          <h2 class="text-3xl font-bold tracking-tight mb-1">Latest from the blog</h2>
          <p class="text-sm text-muted-foreground">Recent insights and tutorials</p>
        </div>
        <div class="hidden sm:block">
          <Link 
            href="/blog" 
            class={buttonVariants({ variant: 'ghost' }) + ' group gap-1.5'}
          >
            Browse all articles
            <Icon name="lucide:arrow-right" class="size-4 transition-transform group-hover:translate-x-0.5" />
          </Link>
        </div>
      </div>
      <div class="space-y-8">
        {latestPosts.map((post) => (
          <article class="group">
            <Link
              href={`/${post.collection}/${post.id}`}
              class="flex flex-col sm:flex-row gap-5"
            >
              {post.data.image && (
                <div class="w-full sm:w-48 sm:flex-shrink-0 aspect-video sm:aspect-square rounded-lg border border-border/40 flex items-center justify-center p-3">
                  <Image
                    src={post.data.image}
                    alt={post.data.title}
                    width={1200}
                    height={630}
                    class="h-full w-full object-contain transition-transform duration-300 group-hover:scale-[1.02]"
                  />
                </div>
              )}
              <div class="flex-1 flex flex-col justify-center min-w-0">
                <div class="flex items-center gap-2.5 text-sm text-muted-foreground mb-2.5">
                  <time class="font-medium">{formatDate(post.data.date)}</time>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <>
                      <span aria-hidden="true" class="text-border">·</span>
                      <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded-md bg-primary/10 text-primary font-medium text-xs">
                        {post.data.tags[0]}
                      </span>
                    </>
                  )}
                </div>
                <h3 class="text-2xl font-bold mb-3 leading-tight group-hover:text-primary transition-colors duration-200">
                  {post.data.title}
                </h3>
                {post.data.description && (
                  <p class="text-muted-foreground line-clamp-2 leading-relaxed text-base mb-3">
                    {post.data.description}
                  </p>
                )}
                <div class="flex items-center gap-2 text-sm font-medium text-primary opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                  <span>Read article</span>
                  <Icon name="lucide:arrow-right" class="size-4 transition-transform group-hover:translate-x-1" />
                </div>
              </div>
            </Link>
          </article>
        ))}
      </div>
      <div class="mt-8 flex justify-center sm:hidden">
        <Link
          href="/blog"
          class={buttonVariants({ variant: 'outline' }) + ' w-full justify-center max-w-xs gap-2'}
        >
          See more posts
          <Icon name="lucide:arrow-right" class="size-4" />
        </Link>
      </div>
    </section>
  )}

  <!-- Highlights -->
  <section class="mt-8 rounded-xl border bg-card/50">
    <div class="p-6">
      <h2 class="text-xl font-bold mb-4">Professional Highlights</h2>
      <p class="text-sm text-muted-foreground mb-4">
        Throughout my career, I've focused on building infrastructure that scales across diverse environments—from enterprise cybersecurity deployments to high-performance computing clusters. Each role has reinforced my commitment to automation, security, and operational excellence.
      </p>
      <div class="space-y-2.5">
        {highlights.map((h) => (
          <div class="flex items-start gap-2.5 text-sm">
            <span class="text-primary mt-0.5">▸</span>
            <p class="leading-snug">{h}</p>
          </div>
        ))}
      </div>
      <div class="mt-5 pt-5 border-t text-sm">
        <p class="font-medium">Now @ Forvia</p>
        <p class="text-muted-foreground">ex-Atos (Cybersecurity)</p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="mt-8 mb-8">
    <div class="relative overflow-hidden rounded-xl border border-primary/20 bg-gradient-to-br from-primary/10 via-primary/5 to-transparent backdrop-blur-sm">
      <!-- Gradient orbs: top-left + bottom-right -->
      <div class="absolute -top-20 -left-20 w-40 h-40 bg-primary/20 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-20 -right-20 w-40 h-40 bg-primary/10 rounded-full blur-3xl"></div>

      <div class="relative z-10 p-8 text-center">
        <h2 class="text-2xl font-semibold mb-3">
          Let's talk infrastructure
        </h2>
        <p class="text-muted-foreground mb-6 max-w-xl mx-auto">
          Into HPC, Kubernetes, homelabs, or just solid systems? I build, secure, and automate infrastructure that just works.
        </p>
        <Link 
          href="mailto:hello@merox.dev" 
          class={buttonVariants({ variant: 'default', size: 'lg' }) + ' group gap-2'}
        >
          <Icon name="lucide:mail" class="size-4" />
          Get in touch
          <span class="ml-1 transition-transform group-hover:translate-x-1">→</span>
        </Link>
      </div>
    </div>
  </section>
</Layout>