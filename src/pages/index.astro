---
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Skills from '@/components/react/Skills'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { getRecentPosts } from '@/lib/data-utils'
import { Image } from 'astro:assets'
import { formatDate, cn } from '@/lib/utils'

// Error handling for fetching recent posts
let latestPosts: Awaited<ReturnType<typeof getRecentPosts>> = []
try {
  latestPosts = await getRecentPosts(2)
} catch (error) {
  console.error('Error fetching recent posts:', error)
  // Continue with empty array - page will still render
}

type ExperienceItem = {
  role: string
  company: string
  period: string
  current?: boolean
  icon: string
  key: string
}

const experience: ExperienceItem[] = [
  {
    role: 'HPC System Administrator',
    company: 'Forvia',
    period: '2022 - Present',
    current: true,
    icon: 'lucide:server',
    key: 'Led end-to-end deployment of HPC cluster on Dell infrastructure with PBS scheduling • Cross-team coordination with network and firewall teams for infrastructure provisioning'
  },
  {
    role: 'Founder',
    company: 'Dolphost',
    period: '2022 - 2024',
    icon: 'lucide:rocket',
    key: 'Built secure WordPress hosting platform • Managed VPS infrastructure and implemented WHMCS/cPanel solutions'
  },
  {
    role: 'Cyber Security Engineer',
    company: 'Atos IT Solutions',
    period: '2020 - 2022',
    icon: 'lucide:shield',
    key: 'Conducted vulnerability assessments with NESSUS • Implemented firewall policies across Cisco, Fortinet, Palo Alto, and Juniper platforms'
  },
  {
    role: 'System Administrator',
    company: 'Netex Romania',
    period: '2018 - 2020',
    icon: 'lucide:server',
    key: 'Migrated Puppet infrastructure to Kubernetes • Managed BAREOS backups for 200+ servers • Configured IPsec site-to-site VPN connections'
  }
]
---
<Layout class="max-w-3xl">
  <PageHead slot="head" title="Merox - Insights from my tech journey" fullTitle={true} />
  
  <!-- Preload LCP image for faster loading -->
  <link rel="preload" as="image" href="/static/homelab.webp" type="image/webp" fetchpriority="high" />
  
  <!-- Scroll animations script -->
  <script is:inline>
    (function() {
      // Respect user's motion preferences
      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches
      if (prefersReducedMotion) return

      let observer = null
      let initTimeout = null
      const observedElements = new WeakSet()

      function cleanup() {
        if (observer) {
          observer.disconnect()
          observer = null
        }
        if (initTimeout) {
          clearTimeout(initTimeout)
          initTimeout = null
        }
        // Reset animation classes for re-initialization
        document.querySelectorAll('.scroll-animate').forEach(el => {
          if (!observedElements.has(el)) {
            el.classList.remove('scroll-animate', 'animate-in')
          }
        })
      }

      function initScrollAnimations() {
        cleanup() // Clean up any existing observer first

        // Use more generous rootMargin on mobile to show content earlier
        const isMobile = window.innerWidth < 640
        const observerOptions = {
          threshold: 0.1,
          rootMargin: isMobile ? '200px 0px -100px 0px' : '0px 0px -50px 0px',
        }

        observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('animate-in')
              observer.unobserve(entry.target)
            }
          })
        }, observerOptions)

        // Observe experience timeline items (individual items only)
        const experienceItems = document.querySelectorAll('section:has([class*="space-y-6"]) > div[class*="space-y"] > div')
        experienceItems.forEach((item, index) => {
          // On mobile, make first item visible immediately to indicate content below
          if (isMobile && index === 0) {
            // First item visible immediately - no animation needed
            return
          }
          item.classList.add('scroll-animate')
          item.style.setProperty('--delay', `${index * 0.1}s`)
          observedElements.add(item)
          observer.observe(item)
        })

        // Observe Skills section - find the actual Skills component container
        const skillsSection = document.querySelector('section:has([class*="Skills"])')
        if (skillsSection) {
          const skillsContainer = Array.from(skillsSection.children).find(
            el => el.tagName !== 'DIV' || !el.querySelector('h2')
          )
          if (skillsContainer && skillsContainer !== skillsSection.querySelector('div.mb-6')) {
            skillsContainer.classList.add('scroll-animate')
            observedElements.add(skillsContainer)
            observer.observe(skillsContainer)
          }
        }

        // Observe blog post cards
        const blogCards = document.querySelectorAll('article.group')
        blogCards.forEach((card, index) => {
          card.classList.add('scroll-animate')
          card.style.setProperty('--delay', `${index * 0.15}s`)
          observedElements.add(card)
          observer.observe(card)
        })
      }

      function debouncedInit() {
        if (initTimeout) {
          clearTimeout(initTimeout)
        }
        initTimeout = setTimeout(initScrollAnimations, 50)
      }

      // Initialize on page load
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', debouncedInit)
      } else {
        debouncedInit()
      }

      // Handle Astro view transitions
      document.addEventListener('astro:page-load', debouncedInit)
      document.addEventListener('astro:before-swap', cleanup)
    })()
  </script>

  <!-- Hero with homelab background -->
  <section class="relative overflow-hidden rounded-xl border">
    <!-- Optimized Background Image with WebP support -->
    <picture class="absolute inset-0 z-0 pointer-events-none">
      <source type="image/webp" srcset="/static/homelab.webp" />
      <img
        src="/static/homelab.png"
        alt=""
        class="absolute inset-0 w-full h-full object-cover parallax-bg"
        fetchpriority="high"
        decoding="async"
        aria-hidden="true"
      />
    </picture>
    
    <!-- Gradient Overlay for text readability -->
    <div class="absolute inset-0 z-[1] bg-gradient-to-br from-background/85 via-background/75 to-background/65 dark:from-background/90 dark:via-background/85 dark:to-background/80"></div>
    
    <!-- Edge fade for better visual flow -->
    <div class="absolute inset-0 z-[1] bg-gradient-to-t from-background/40 via-transparent to-transparent"></div>

    <!-- Content Container -->
    <div class="relative z-10 p-8 md:p-10">
      <div class="flex flex-col-reverse gap-6 sm:flex-row sm:items-start sm:justify-between">
        <div class="flex-1 min-w-0">
          <div class="inline-block mb-3">
            <span class="text-xs font-medium uppercase tracking-wider text-primary px-3 py-1 rounded-full bg-primary/10 border border-primary/20">
              HPC System Administrator
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl leading-tight font-bold tracking-tight">
            Building infrastructure<br/>that <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-primary/50">scales</span>.
          </h1>
          <p class="text-muted-foreground mt-4 leading-relaxed text-base md:text-lg">
            System Administrator and former Cybersecurity Engineer with expertise in Linux-based technologies, networking, and security.
          </p>
          <div class="mt-6 flex flex-wrap items-center gap-3">
            <Link href="/blog" class={buttonVariants({ variant: 'default', size: 'lg' })}>
              Read the blog
            </Link>
            <Link href="/about" class={buttonVariants({ variant: 'outline', size: 'lg' })}>
              About me
            </Link>
          </div>
        </div>
        <div class="relative flex-shrink-0">
          <img
            src="/reworkedmeroxdc1.webp"
            alt="Robert Melcher, HPC System Administrator"
            width="112"
            height="112"
            loading="eager"
            fetchpriority="high"
            class="w-28 h-28 rounded-full object-cover border-4 border-background shadow-xl ring-2 ring-primary/10 dark:ring-primary/20"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Experience Timeline - Clean Design -->
  <section class="mt-8">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Experience</h2>
      <p class="text-sm text-muted-foreground">
        9+ years in server infrastructure and enterprise environments, with additional experience in cybersecurity
      </p>
    </div>
    
    <div class="space-y-6">
      {experience.map((exp, index) => (
        <div class="relative">
          <!-- Timeline connector -->
          {index < experience.length - 1 && (
            <div class="absolute left-[11px] top-8 bottom-0 w-px bg-border" aria-hidden="true"></div>
          )}
          
          <div class="flex gap-4">
            <!-- Icon -->
            <div class={cn(
              "relative flex-shrink-0 w-6 h-6 rounded-full flex items-center justify-center ring-4 ring-background z-10",
              exp.current ? "bg-primary text-primary-foreground" : "bg-muted text-muted-foreground"
            )}>
              <Icon name={exp.icon} class="size-3.5" />
            </div>
            
            <!-- Content -->
            <div class="flex-1 pb-2 min-w-0">
              <div class="mb-1">
                <h3 class="font-semibold text-lg leading-tight">{exp.role}</h3>
                <p class="text-sm text-muted-foreground">
                  {exp.company} · {exp.period}
                </p>
              </div>
              <p class="text-sm text-muted-foreground/90 leading-relaxed mt-2">
                {exp.key}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Skills & Technologies -->
  <section class="mt-12">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Skills & Technologies</h2>
      <p class="text-sm text-muted-foreground">
        Core competencies across systems administration, security, and infrastructure automation
      </p>
    </div>
    <ErrorBoundary client:load>
      <Skills client:load />
    </ErrorBoundary>
  </section>

  <!-- Latest from the blog -->
  {latestPosts && latestPosts.length > 0 && (
    <section class="mt-12">
      <div class="mb-8 flex items-center justify-between">
        <div>
          <h2 class="text-3xl font-bold tracking-tight mb-1">Latest from the blog</h2>
          <p class="text-sm text-muted-foreground">Recent insights and tutorials</p>
        </div>
        <div class="hidden sm:block">
          <Link 
            href="/blog" 
            class={buttonVariants({ variant: 'ghost' }) + ' group gap-1.5'}
          >
            Browse all articles
            <Icon name="lucide:arrow-right" class="size-4 transition-transform group-hover:translate-x-0.5" />
          </Link>
        </div>
      </div>
      <div class="space-y-8">
        {latestPosts.map((post) => (
          <article class="group">
            <Link
              href={`/${post.collection}/${post.id}`}
              class="flex flex-col sm:flex-row gap-5"
            >
              {post.data.image && (
                <div class="w-full sm:w-48 sm:flex-shrink-0 aspect-video sm:aspect-square rounded-lg border border-border/40 flex items-center justify-center p-3">
                  <Image
                    src={post.data.image}
                    alt={post.data.title}
                    width={1200}
                    height={630}
                    class="h-full w-full object-contain transition-transform duration-300 group-hover:scale-[1.02]"
                  />
                </div>
              )}
              <div class="flex-1 flex flex-col justify-center min-w-0">
                <div class="flex items-center gap-2.5 text-sm text-muted-foreground mb-2.5">
                  <time class="font-medium">{formatDate(post.data.date)}</time>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <>
                      <span aria-hidden="true" class="text-border">·</span>
                      <span class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded-md bg-primary/10 text-primary font-medium text-xs">
                        {post.data.tags[0]}
                      </span>
                    </>
                  )}
                </div>
                <h3 class="text-2xl font-bold mb-3 leading-tight group-hover:text-primary transition-colors duration-200">
                  {post.data.title}
                </h3>
                {post.data.description && (
                  <p class="text-muted-foreground line-clamp-2 leading-relaxed text-base mb-3">
                    {post.data.description}
                  </p>
                )}
                <div class="flex items-center gap-2 text-sm font-medium text-primary opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                  <span>Read article</span>
                  <Icon name="lucide:arrow-right" class="size-4 transition-transform group-hover:translate-x-1" />
                </div>
              </div>
            </Link>
          </article>
        ))}
      </div>
      <div class="mt-8 flex justify-center sm:hidden">
        <Link
          href="/blog"
          class={buttonVariants({ variant: 'outline' }) + ' w-full justify-center max-w-xs gap-2'}
        >
          See more posts
          <Icon name="lucide:arrow-right" class="size-4" />
        </Link>
      </div>
    </section>
  )}

<!-- CTA Section - Split Layout -->
<section class="mt-12 mb-8">
  <div class="rounded-xl border bg-card/50 overflow-hidden">
    <div class="grid md:grid-cols-[1fr_auto] gap-6 p-6 md:p-8 items-center">
      <div class="text-left">
