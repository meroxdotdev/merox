---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Skills from '@/components/react/Skills'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { getRecentPosts } from '@/lib/data-utils'
import { cn } from '@/lib/utils'
import { SOCIAL_LINKS, ICON_MAP, SITE } from '@/consts'
import type { SocialLink } from '@/types'

// Error handling for fetching recent posts
let latestPosts: Awaited<ReturnType<typeof getRecentPosts>> = []
try {
  latestPosts = await getRecentPosts(3)
} catch (error) {
  console.error('Error fetching recent posts:', error)
}

// Person Schema for homepage SEO
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Robert Melcher",
  "alternateName": "merox",
  "url": SITE.href,
  "image": new URL('/reworkedmeroxdc1.webp', Astro.site).href,
  "jobTitle": "HPC System Administrator",
  "worksFor": {
    "@type": "Organization",
    "name": "Forvia"
  },
  "sameAs": [
    "https://github.com/meroxdotdev",
    "https://www.linkedin.com/in/robert-melcher-92a1a9157"
  ],
  "description": SITE.description
}

// Organization Schema
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": SITE.title,
  "url": SITE.href,
  "logo": new URL('/reworkedmeroxdc1.webp', Astro.site).href,
  "description": SITE.description,
  "founder": {
    "@type": "Person",
    "name": "Robert Melcher"
  }
}

// Website Schema
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": SITE.title,
  "url": SITE.href,
  "description": SITE.description,
  "author": {
    "@type": "Person",
    "name": "Robert Melcher"
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": `${SITE.href}/blog?q={search_term_string}`
    },
    "query-input": "required name=search_term_string"
  }
}

type ExperienceItem = {
  role: string
  company: string
  period: string
  current?: boolean
  icon: string
  key: string
}

const experience: ExperienceItem[] = [
  {
    role: 'HPC System Administrator',
    company: 'Forvia',
    period: '2022 - Present',
    current: true,
    icon: 'lucide:server',
    key: 'Led end-to-end deployment of HPC cluster on Dell infrastructure with PBS scheduling • Cross-team coordination with network and firewall teams for infrastructure provisioning'
  },
  {
    role: 'Founder',
    company: 'Dolphost',
    period: '2022 - 2024',
    icon: 'lucide:rocket',
    key: 'Built secure WordPress hosting platform • Managed VPS infrastructure and implemented WHMCS/cPanel solutions'
  },
  {
    role: 'Cyber Security Engineer',
    company: 'Atos IT Solutions',
    period: '2020 - 2022',
    icon: 'lucide:shield',
    key: 'Conducted vulnerability assessments with NESSUS • Implemented firewall policies across Cisco, Fortinet, Palo Alto, and Juniper platforms'
  },
  {
    role: 'System Administrator',
    company: 'Netex Romania',
    period: '2018 - 2020',
    icon: 'lucide:server',
    key: 'Migrated Puppet infrastructure to Kubernetes • Managed BAREOS backups for 200+ servers • Configured IPsec site-to-site VPN connections'
  }
]
---
<Layout class="max-w-3xl" transition:persist="home-layout">
  <PageHead slot="head" title="Merox - Insights from my tech journey" fullTitle={true} />
  
  <!-- Schema Markup for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  
  <!-- Preload hero background images for instant theme switching -->
  <link rel="preload" as="image" href="/static/homelab_d.webp" type="image/webp" fetchpriority="high" />
  <link rel="preload" as="image" href="/static/homelab_w.webp" type="image/webp" fetchpriority="high" />
  
  <!-- Hero Section -->
  <section class="hero-section relative overflow-hidden rounded-xl border" transition:animate="none">
    <!-- Background Image - CSS background-image (best practice for backgrounds) -->
    <div class="hero-bg-container" aria-hidden="true"></div>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 z-[1] bg-gradient-to-b from-background/90 via-background/80 to-background/90 dark:from-background/95 dark:via-background/90 dark:to-background/95"></div>

    <!-- Content -->
    <div class="relative z-10 p-8 md:p-12">
      <div class="flex flex-col-reverse gap-8 sm:flex-row sm:items-start sm:justify-between">
        <!-- Main Content -->
        <div class="flex-1 min-w-0 space-y-6">
          <!-- Heading -->
          <div class="space-y-4">
            <h1 class="text-4xl sm:text-5xl md:text-6xl leading-tight font-bold tracking-tight">
              Building infrastructure<br class="hidden sm:block" />
              <span class="text-primary">that scales</span>.
            </h1>
            <p class="text-muted-foreground mt-4 leading-relaxed text-base md:text-lg max-w-xl">
              System Administrator and former Cybersecurity Engineer with expertise in Linux-based technologies, networking, and security.
            </p>
          </div>
          
          <!-- CTA Buttons -->
          <div class="flex flex-wrap items-center gap-3 pt-2">
            <Link href="/blog" class={buttonVariants({ variant: 'default', size: 'lg' })}>
              Read the blog
              <Icon name="lucide:arrow-right" class="size-4" />
            </Link>
            <Link href="/about" class={buttonVariants({ variant: 'outline', size: 'lg' })}>
              About me
            </Link>
          </div>
          
          <!-- Social Icons (Horizontal) -->
          <div class="pt-2">
            <ul class="flex flex-wrap items-center gap-2" role="list">
              {SOCIAL_LINKS.map(({ href, label }: SocialLink) => (
                <li>
                  <Link
                    href={href}
                    aria-label={label}
                    title={label}
                    class={buttonVariants({ variant: 'outline', size: 'icon' }) + ' backdrop-blur-sm bg-background/80'}
                    external={href.startsWith('http') || href.startsWith('mailto:')}
                  >
                    <Icon
                      name={
                        ICON_MAP[label as keyof typeof ICON_MAP] ||
                        'lucide:message-circle-question'
                      }
                      class="size-4"
                    />
                  </Link>
                </li>
              ))}
            </ul>
          </div>
        </div>
        
        <!-- Profile Image -->
        <div class="relative flex-shrink-0 sm:self-start">
          <img
            src="/reworkedmeroxdc1.webp"
            alt="Robert Melcher, HPC System Administrator"
            width="128"
            height="128"
            loading="eager"
            fetchpriority="high"
            class="w-28 h-28 sm:w-32 sm:h-32 rounded-full object-cover border-2 border-background shadow-lg dark:shadow-xl dark:shadow-black/40 ring-1 ring-border/20"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Experience Timeline -->
  <section class="mt-8">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Experience</h2>
      <p class="text-sm text-muted-foreground">
        9+ years in server infrastructure and enterprise environments, with additional experience in cybersecurity
      </p>
    </div>
    
    <div class="space-y-6">
      {experience.map((exp, index) => (
        <div class="relative">
          {index < experience.length - 1 && (
            <div class="absolute left-[11px] top-8 bottom-0 w-px bg-border" aria-hidden="true"></div>
          )}
          
          <div class="flex gap-4">
            <div class={cn(
              "relative flex-shrink-0 w-6 h-6 rounded-full flex items-center justify-center ring-4 ring-background z-10",
              exp.current ? "bg-primary text-primary-foreground shadow-lg shadow-primary/20" : "bg-muted text-muted-foreground"
            )}>
              <Icon name={exp.icon} class="size-3.5" />
            </div>
            
            <div class="flex-1 pb-2 min-w-0">
              <div class="mb-1">
                <h3 class="font-semibold text-lg leading-tight">{exp.role}</h3>
                <p class="text-sm text-muted-foreground">
                  {exp.company} · {exp.period}
                </p>
              </div>
              <p class="text-sm text-muted-foreground/90 leading-relaxed mt-2">
                {exp.key}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Skills & Technologies -->
  <section class="mt-12">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Skills & Technologies</h2>
      <p class="text-sm text-muted-foreground">
        Core competencies across systems administration, security, and infrastructure automation
      </p>
    </div>
    <ErrorBoundary client:load transition:persist="skills-error-boundary">
      <Skills client:load transition:persist="skills-section" />
    </ErrorBoundary>
  </section>

  <!-- Latest from the blog -->
  {latestPosts && latestPosts.length > 0 && (
    <section class="mt-12">
      <div class="mb-6 flex items-center justify-between">
        <div>
          <h2 class="text-2xl font-semibold mb-2">Latest from the blog</h2>
          <p class="text-sm text-muted-foreground">Recent insights and tutorials</p>
        </div>
        <Link 
          href="/blog" 
          class={buttonVariants({ variant: 'ghost' }) + ' hidden sm:flex items-center gap-1.5'}
        >
          View all
          <Icon name="lucide:arrow-right" class="size-4" />
        </Link>
      </div>
      
      <div class="space-y-2">
        {latestPosts.map((post) => (
          <article>
            <BlogCard entry={post} />
          </article>
        ))}
      </div>
      
      <article class="mt-2 sm:hidden">
        <Link
          href="/blog"
          aria-label="View all blog posts"
          class="group block py-3 px-2 rounded-md border border-border/50 bg-muted/20 hover:bg-muted/40 hover:border-primary/30 transition-all duration-200"
        >
          <div class="flex items-center gap-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-primary/10 dark:bg-primary/20 flex items-center justify-center group-hover:bg-primary/20 dark:group-hover:bg-primary/30 transition-colors" aria-hidden="true">
              <Icon name="lucide:library" class="size-5 text-primary" />
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2">
                <span class="text-sm font-semibold text-foreground group-hover:text-primary transition-colors">
                  View all posts
                </span>
                <Icon name="lucide:arrow-right" class="size-4 text-primary/70 group-hover:text-primary group-hover:translate-x-0.5 transition-all shrink-0" aria-hidden="true" />
              </div>
              <p class="text-xs text-muted-foreground mt-0.5">
                Explore all articles and tutorials
              </p>
            </div>
          </div>
        </Link>
      </article>
    </section>
  )}

  <!-- CTA Section -->
  <section class="mt-8 sm:mt-12">
    <div class="max-w-2xl mx-auto">
      <div class="mb-12 relative">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-border"></div>
        </div>
        <div class="relative flex justify-center">
          <div class="flex items-center gap-2.5 px-4 py-2 rounded-full bg-background border border-border shadow-sm">
            <span class="relative flex h-1.5 w-1.5">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
              <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-primary"></span>
            </span>
            <span class="text-xs font-medium text-muted-foreground uppercase tracking-wider">Available</span>
          </div>
        </div>
      </div>
      
      <div class="text-center space-y-6">
        <div class="space-y-2">
          <h2 class="text-4xl sm:text-5xl md:text-6xl font-semibold tracking-tight text-foreground leading-tight">
            Let's talk
            <span class="block mt-2 text-transparent bg-clip-text bg-gradient-to-r from-primary via-primary/90 to-primary/75">
              infrastructure
            </span>
          </h2>
        </div>
        <p class="text-lg sm:text-xl text-muted-foreground leading-relaxed max-w-xl mx-auto">
          Into HPC, Kubernetes, homelabs, or just solid systems? I build, secure, and automate infrastructure that just works.
        </p>
        <div class="pt-4">
          <Link 
            href="mailto:hello@merox.dev" 
            class="group inline-flex items-center gap-2.5 px-7 py-3.5 rounded-lg bg-foreground text-background text-base font-medium hover:bg-foreground/90 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
          >
            <Icon name="lucide:mail" class="size-4" />
            <span>Reach out</span>
            <Icon name="lucide:arrow-right" class="size-4 transition-transform group-hover:translate-x-1" />
          </Link>
        </div>
      </div>
    </div>
  </section>
</Layout>