---
import '@fontsource/caveat/700.css'
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { getRecentPosts } from '@/lib/data-utils'
import { SOCIAL_LINKS, ICON_MAP, SITE } from '@/consts'
import type { SocialLink } from '@/types'
import { Image } from 'astro:assets'
import heroImage from '../assets/meroxindc1.webp'

let latestPosts: Awaited<ReturnType<typeof getRecentPosts>> = []
try {
  latestPosts = await getRecentPosts(3)
} catch (error) {
  console.error('Error fetching recent posts:', error)
}

const heroImageUrl = new URL('/reworkedmeroxdc1.webp', Astro.site).href

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Robert Melcher",
  "alternateName": "merox",
  "url": SITE.href,
  "image": heroImageUrl,
  "jobTitle": "HPC System Administrator",
  "worksFor": { "@type": "Organization", "name": "Forvia" },
  "sameAs": ["https://github.com/meroxdotdev", "https://www.linkedin.com/in/robert-melcher-92a1a9157"],
  "description": SITE.description
}

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": SITE.title,
  "url": SITE.href,
  "logo": heroImageUrl,
  "description": SITE.description,
  "founder": { "@type": "Person", "name": "Robert Melcher" }
}

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": SITE.title,
  "url": SITE.href,
  "description": SITE.description,
  "author": { "@type": "Person", "name": "Robert Melcher" },
  "potentialAction": {
    "@type": "SearchAction",
    "target": { "@type": "EntryPoint", "urlTemplate": `${SITE.href}/blog?q={search_term_string}` },
    "query-input": "required name=search_term_string"
  }
}
---

<Layout class="max-w-4xl">
  <PageHead slot="head" title="Merox - Insights from my tech journey" fullTitle={true} />

  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  
  <section class="hero-section relative pt-4 pb-8 lg:pt-12 lg:pb-20">
    <div 
      class="absolute inset-0 -z-20 h-full w-[100vw] left-1/2 -translate-x-1/2 
             bg-[linear-gradient(to_right,#00000015_1px,transparent_1px),linear-gradient(to_bottom,#00000015_1px,transparent_1px)] 
             dark:bg-[linear-gradient(to_right,#ffffff18_1px,transparent_1px),linear-gradient(to_bottom,#ffffff18_1px,transparent_1px)] 
             bg-[size:40px_40px]"
      style="mask-image: radial-gradient(ellipse at center, black 20%, transparent 80%); -webkit-mask-image: radial-gradient(ellipse at center, black 20%, transparent 80%);"
    >
    </div>

    <div class="flex flex-col-reverse lg:flex-row items-center gap-8 lg:gap-14 px-4 md:px-0">
      
      <div class="flex-1 space-y-6 text-center lg:text-left">
        <div class="space-y-4">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black tracking-tighter uppercase leading-[0.9] text-balance">
            Building<br />infrastructure<br /><span class="text-primary">that scales</span>.
          </h1>
          <p class="text-base lg:text-lg text-muted-foreground leading-relaxed max-w-[480px] mx-auto lg:mx-0 font-medium">
            System Administrator and former Cybersecurity Engineer with expertise in Linux-based technologies, networking, and security.
          </p>
        </div>

        <div class="flex flex-col items-center lg:items-start gap-6">
          <div class="flex flex-wrap justify-center lg:justify-start items-center gap-3">
            <Link href="/blog" class={buttonVariants({ variant: 'default', size: 'lg', class: 'rounded-full px-6 h-12 text-sm font-bold shadow-lg shadow-primary/20 transition-all hover:-translate-y-0.5' })}>
              Read the blog
              <Icon name="lucide:arrow-right" class="ml-2 size-4" aria-hidden="true" />
            </Link>
            <Link href="/about" class={buttonVariants({ variant: 'outline', size: 'lg', class: 'rounded-full px-6 h-12 text-sm font-bold transition-all hover:-translate-y-0.5' })}>
              About me
            </Link>
          </div>
          
          <nav aria-label="Social links">
            <ul class="flex items-center gap-1.5" role="list">
              {SOCIAL_LINKS.map(({ href, label }: SocialLink) => (
                <li>
                  <Link href={href} aria-label={label} class="p-2 text-muted-foreground hover:text-primary transition-colors">
                    <Icon name={ICON_MAP[label as keyof typeof ICON_MAP] || 'lucide:message-circle'} class="size-5" />
                  </Link>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      </div>
      
      <div class="relative flex-shrink-0 mb-8 lg:mb-0 select-none group">
        <div 
          class="relative p-2.5 pb-12 border transition-all duration-500 ease-in-out shadow-xl
                 bg-white border-zinc-200/50 
                 dark:bg-gray-300 dark:border-zinc-300
                 rotate-2 hover:scale-105"
          style="border-radius: 2px;"
        >
          <div class="relative overflow-hidden w-[190px] h-[226px] sm:w-[220px] sm:h-[256px] rounded-sm border border-black/10
                      bg-green-900/20 dark:bg-green-900/20">
            <Image 
              src={heroImage} 
              alt="Robert Melcher" 
              widths={[250, 500, heroImage.width]}
              sizes="(max-width: 768px) 190px, 220px"
              loading="eager"
              fetchpriority="high"
              class="w-full h-full block object-cover object-top dark:contrast-[1.02]"
            />
          </div>
          
          <div class="absolute bottom-2.5 left-0 right-0 text-center">
            <span 
              class="text-zinc-800 text-xl tracking-wide -rotate-1 inline-block opacity-95" 
              style="font-family: 'Caveat', cursive;"
            >
              ./merox.sh --live
            </span>
          </div>
        </div>
        <div class="absolute -bottom-3 left-1/2 -translate-x-1/2 w-[85%] h-3 bg-black/20 dark:bg-black/50 blur-lg rounded-[100%] -z-10 transition-transform duration-500 group-hover:scale-110"></div>
      </div>

    </div>
  </section>

  {latestPosts && latestPosts.length > 0 && (
    <section class="mt-8 pt-8 relative">
      <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-border/40 to-transparent"></div>
      <div class="mb-6">
        <h2 class="text-2xl font-black tracking-tighter uppercase leading-none text-foreground text-center lg:text-left">
          Latest <span class="text-primary">Insights</span>
        </h2>
      </div>
      <div class="flex flex-col gap-5">
        {latestPosts.map((post) => (
          <BlogCard entry={post} variant="featured" />
        ))}
      </div>
      <div class="mt-12 flex justify-center">
        <Link href="/blog" class={buttonVariants({ variant: 'outline', size: 'lg', class: 'rounded-full h-12' })}>
          Show more
        </Link>
      </div>
    </section>
  )}
</Layout>