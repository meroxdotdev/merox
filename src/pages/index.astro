---
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Skills from '@/components/react/Skills'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { getRecentPosts } from '@/lib/data-utils'
import { Image } from 'astro:assets'
import { formatDate } from '@/lib/utils'
const latestPosts = await getRecentPosts(2)
const highlights = [
  'HPC @ Forvia: Full InfiniBand clusters + PBS scheduling',
  'Dolphost Founder: Secure VPS & WordPress hosting',
  'Cybersecurity @ Atos: Nessus, Palo Alto/Fortinet and Forescout configurations',
  'SysAdmin @ Netex: Migrated bare-metal Puppet to Kubernetes',
]
---
<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />

  <!-- Hero cu efect inversat: orbs în stânga-sus și dreapta-jos -->
  <section class="relative overflow-hidden rounded-xl border bg-gradient-to-br from-primary/5 via-primary/3 to-transparent">
    <!-- Gradient orbs inversate -->
    <div class="absolute -top-20 -left-20 w-40 h-40 bg-primary/20 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-20 -right-20 w-40 h-40 bg-primary/10 rounded-full blur-3xl"></div>

    <div class="relative z-10 p-8 md:p-10">
      <div class="flex flex-col-reverse gap-6 sm:flex-row sm:items-start sm:justify-between">
        <div class="flex-1 min-w-0">
          <div class="inline-block mb-3">
            <span class="text-xs font-medium uppercase tracking-wider text-primary px-3 py-1 rounded-full bg-primary/10 border border-primary/20">
              HPC System Administrator
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl leading-tight font-bold tracking-tight">
            Building infrastructure<br/>that scales.
          </h1>
          <p class="text-muted-foreground mt-4 leading-relaxed text-base md:text-lg">
            DevOps-focused HPC System Administrator with 9+ years in IT, including 2 years as a Cybersecurity Engineer.
          </p>
          <div class="mt-6 flex flex-wrap items-center gap-3">
            <Link href="/blog" class={buttonVariants({ variant: 'default', size: 'lg' })}>
              Read the blog
            </Link>
            <Link href="/about" class={buttonVariants({ variant: 'outline', size: 'lg' })}>
              About me
            </Link>
          </div>
        </div>
        <img
          src="https://merox.dev/reworkedmeroxdc1.webp"
          alt="Robert Melcher"
          class="w-28 h-28 rounded-full object-cover border-4 border-background shadow-xl flex-shrink-0 ring-2 ring-primary/10"
        />
      </div>
    </div>
  </section>

  <!-- Skills & Technologies -->
  <section class="mt-8">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Skills & Technologies</h2>
      <p class="text-sm text-muted-foreground">
        Core competencies across systems administration, security, and infrastructure automation
      </p>
    </div>
    <Skills client:load />
  </section>

  <!-- Latest from the blog -->
  {latestPosts && latestPosts.length > 0 && (
    <section class="mt-12">
      <div class="mb-6 flex items-center justify-between">
        <div>
          <h2 class="text-3xl font-bold tracking-tight">Latest from the blog</h2>
        </div>
        <div class="hidden sm:block">
          <Link href="/blog" class={buttonVariants({ variant: 'ghost' })}>
            View all posts →
          </Link>
        </div>
      </div>
      <div class="grid gap-6 md:grid-cols-2">
        {latestPosts.map((post) => (
          <Link
            href={`/${post.collection}/${post.id}`}
            class="block rounded-xl border bg-card hover:border-primary/50"
          >
            {post.data.image && (
              <div class="overflow-hidden rounded-t-xl">
                <Image
                  src={post.data.image}
                  alt={post.data.title}
                  width={1200}
                  height={630}
                  class="h-48 w-full object-cover"
                />
              </div>
            )}
            <div class="p-6">
              <div class="flex items-center gap-2 text-xs text-muted-foreground mb-3">
                <Icon name="lucide:calendar" class="size-3" />
                <span>{formatDate(post.data.date)}</span>
                {post.data.tags && post.data.tags.length > 0 && (
                  <>
                    <span>•</span>
                    <span class="font-medium">{post.data.tags[0]}</span>
                  </>
                )}
              </div>
              <h3 class="text-xl font-semibold line-clamp-2 mb-2">
                {post.data.title}
              </h3>
              {post.data.description && (
                <p class="text-muted-foreground line-clamp-3 leading-relaxed">
                  {post.data.description}
                </p>
              )}
            </div>
          </Link>
        ))}
      </div>
      <div class="mt-6 flex justify-center sm:hidden">
        <Link
          href="/blog"
          class={buttonVariants({ variant: 'outline' }) + ' w-full justify-center max-w-xs'}
        >
          View all posts →
        </Link>
      </div>
    </section>
  )}

  <!-- Highlights -->
  <section class="mt-8 rounded-xl border bg-card/50">
    <div class="p-6">
      <h2 class="text-xl font-bold mb-4">Highlights</h2>
      <div class="space-y-2.5">
        {highlights.map((h) => (
          <div class="flex items-start gap-2.5 text-sm">
            <span class="text-primary mt-0.5">▸</span>
            <p class="leading-snug">{h}</p>
          </div>
        ))}
      </div>
      <div class="mt-5 pt-5 border-t flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3 text-sm">
        <div>
          <p class="font-medium">Now @ Forvia</p>
          <p class="text-muted-foreground">ex-Atos (Cybersecurity)</p>
        </div>
        <Link href="/about" class={buttonVariants({ variant: 'outline', size: 'sm' })}>
          Full background
        </Link>
      </div>
    </div>
  </section>

  <!-- CTA Block - Brutalist Design -->
  <section class="mt-8 mb-8">
    <div class="rounded-xl border-4 border-foreground bg-primary text-primary-foreground p-8 md:p-10 text-center">
      <Icon name="lucide:zap" class="size-16 mx-auto mb-4" />
      <h2 class="text-3xl md:text-5xl font-black uppercase mb-4 leading-none">
        LET'S BUILD<br/>SOMETHING
      </h2>
      <p class="text-lg mb-6 max-w-2xl mx-auto font-bold">
        NEED EXPERTISE IN HPC • KUBERNETES • SECURITY?
      </p>
      <Link 
        href="mailto:hello@merox.dev"
        class="inline-block px-8 py-4 bg-background text-foreground font-black uppercase text-base hover:bg-foreground hover:text-background transition-colors border-4 border-background hover:border-foreground rounded-lg"
      >
        GET IN TOUCH →
      </Link>
    </div>
  </section>
</Layout>