---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Skills from '@/components/react/Skills'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { buttonVariants } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { getRecentPosts } from '@/lib/data-utils'
import { cn } from '@/lib/utils'
import { SOCIAL_LINKS, ICON_MAP, SITE } from '@/consts'
import type { SocialLink } from '@/types'

// Error handling for fetching recent posts
let latestPosts: Awaited<ReturnType<typeof getRecentPosts>> = []
try {
  latestPosts = await getRecentPosts(3)
} catch (error) {
  console.error('Error fetching recent posts:', error)
}

// Person Schema for homepage SEO
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Robert Melcher",
  "alternateName": "merox",
  "url": SITE.href,
  "image": new URL('/reworkedmeroxdc1.webp', Astro.site).href,
  "jobTitle": "HPC System Administrator",
  "worksFor": {
    "@type": "Organization",
    "name": "Forvia"
  },
  "sameAs": [
    "https://github.com/meroxdotdev",
    "https://www.linkedin.com/in/robert-melcher-92a1a9157"
  ],
  "description": SITE.description
}

// Organization Schema
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": SITE.title,
  "url": SITE.href,
  "logo": new URL('/reworkedmeroxdc1.webp', Astro.site).href,
  "description": SITE.description,
  "founder": {
    "@type": "Person",
    "name": "Robert Melcher"
  }
}

// Website Schema
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": SITE.title,
  "url": SITE.href,
  "description": SITE.description,
  "author": {
    "@type": "Person",
    "name": "Robert Melcher"
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": `${SITE.href}/blog?q={search_term_string}`
    },
    "query-input": "required name=search_term_string"
  }
}

type ExperienceItem = {
  role: string
  company: string
  period: string
  current?: boolean
  icon: string
  key: string
}

const experience: ExperienceItem[] = [
  {
    role: 'HPC System Administrator',
    company: 'Forvia',
    period: '2022 - Present',
    current: true,
    icon: 'lucide:server',
    key: 'Led end-to-end deployment of HPC cluster on Dell infrastructure with PBS scheduling • Cross-team coordination with network and firewall teams for infrastructure provisioning'
  },
  {
    role: 'Founder',
    company: 'Dolphost',
    period: '2022 - 2024',
    icon: 'lucide:rocket',
    key: 'Built secure WordPress hosting platform • Managed VPS infrastructure and implemented WHMCS/cPanel solutions'
  },
  {
    role: 'Cyber Security Engineer',
    company: 'Atos IT Solutions',
    period: '2020 - 2022',
    icon: 'lucide:shield',
    key: 'Conducted vulnerability assessments with NESSUS • Implemented firewall policies across Cisco, Fortinet, Palo Alto, and Juniper platforms'
  },
  {
    role: 'System Administrator',
    company: 'Netex Romania',
    period: '2018 - 2020',
    icon: 'lucide:server',
    key: 'Migrated Puppet infrastructure to Kubernetes • Managed BAREOS backups for 200+ servers • Configured IPsec site-to-site VPN connections'
  }
]
---
<Layout class="max-w-3xl" transition:persist="home-layout">
  <PageHead slot="head" title="Merox - Insights from my tech journey" fullTitle={true} />
  
  <!-- Schema Markup for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  
  <!-- Preload hero image for instant display -->
  <link rel="preload" as="image" href="/meroxindc1.webp" type="image/webp" fetchpriority="high" />
  
  <!-- Hero glow animation with reduced motion support -->
  <style>
    .hero-glow {
      animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    
    @media (prefers-reduced-motion: reduce) {
      .hero-glow {
        animation: none;
      }
    }
  </style>
  
  <!-- Hero Section - Minimal & Impactful -->
  <section class="relative pt-6 pb-12 md:pt-12 md:pb-20" transition:animate="none">
    <div class="flex flex-col-reverse md:flex-row items-center gap-8 md:gap-6">
      <!-- Main Content -->
      <div class="flex-1 space-y-8 text-center md:text-left">
        <!-- Heading -->
        <div class="space-y-4">
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-black tracking-tighter uppercase leading-[0.9] text-balance">
            Building<br />
            infrastructure<br />
            <span class="text-primary">that scales</span>.
          </h1>
          <p class="text-base md:text-lg text-muted-foreground leading-relaxed max-w-lg mx-auto md:mx-0">
            System Administrator and former Cybersecurity Engineer with expertise in Linux-based technologies, networking, and security.
          </p>
        </div>
        
        <!-- CTA Buttons & Socials -->
        <div class="flex flex-col items-center md:items-start gap-6">
          <div class="flex flex-wrap justify-center md:justify-start items-center gap-3">
            <Link href="/blog" class={buttonVariants({ variant: 'default', size: 'lg', class: 'rounded-full px-6 h-12 text-sm font-bold shadow-lg shadow-primary/20 hover:shadow-primary/30 transition-all hover:-translate-y-0.5 active:scale-95' })}>
              Read the blog
              <Icon name="lucide:arrow-right" class="ml-2 size-4" aria-hidden="true" />
            </Link>
            <Link href="/about" class={buttonVariants({ variant: 'outline', size: 'lg', class: 'rounded-full px-6 h-12 text-sm font-bold hover:bg-muted transition-all hover:-translate-y-0.5 active:scale-95' })}>
              About me
            </Link>
          </div>
          
          <!-- Social Links -->
          <nav aria-label="Social links">
            <ul class="flex items-center gap-1.5" role="list">
              {SOCIAL_LINKS.map(({ href, label }: SocialLink) => (
                <li>
                  <Link
                    href={href}
                    aria-label={label}
                    title={label}
                    class="group p-2.5 rounded-full hover:bg-primary/10 transition-all duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                    external={href.startsWith('http') || href.startsWith('mailto:')}
                  >
                    <Icon
                      name={ICON_MAP[label as keyof typeof ICON_MAP] || 'lucide:message-circle-question'}
                      class="size-5 text-muted-foreground group-hover:text-primary transition-colors"
                      aria-hidden="true"
                    />
                    <span class="sr-only">{label}</span>
                  </Link>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      </div>
      
      <!-- Profile Image - Cutout PNG -->
      <div class="relative flex-shrink-0 w-full max-w-[260px] md:max-w-none md:w-[280px] lg:w-[320px]">
        <!-- Subtle accent background glow -->
        <div class="hero-glow absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full bg-primary/5 rounded-full blur-[80px] -z-10" aria-hidden="true"></div>
        
        <picture>
          <source srcset="/meroxindc1.webp" type="image/webp" />
          <img
            src="/meroxindc1.webp"
            alt="Robert Melcher, HPC System Administrator"
            width="320"
            height="400"
            loading="eager"
            fetchpriority="high"
            class="w-full h-auto drop-shadow-[0_20px_50px_rgba(0,0,0,0.2)] dark:drop-shadow-[0_20px_50px_rgba(255,255,255,0.03)]"
          />
        </picture>
      </div>
    </div>
  </section>

  <!-- Experience Timeline -->
  <section class="mt-8">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Experience</h2>
      <p class="text-sm text-muted-foreground">
        9+ years in server infrastructure and enterprise environments, with additional experience in cybersecurity
      </p>
    </div>
    
    <div class="space-y-6">
      {experience.map((exp, index) => (
        <div class="relative">
          {index < experience.length - 1 && (
            <div class="absolute left-[11px] top-8 bottom-0 w-px bg-border" aria-hidden="true"></div>
          )}
          
          <div class="flex gap-4">
            <div class={cn(
              "relative flex-shrink-0 w-6 h-6 rounded-full flex items-center justify-center ring-4 ring-background z-10",
              exp.current ? "bg-primary text-primary-foreground shadow-lg shadow-primary/20" : "bg-muted text-muted-foreground"
            )}>
              <Icon name={exp.icon} class="size-3.5" />
            </div>
            
            <div class="flex-1 pb-2 min-w-0">
              <div class="mb-1">
                <h3 class="font-semibold text-lg leading-tight">{exp.role}</h3>
                <p class="text-sm text-muted-foreground">
                  {exp.company} · {exp.period}
                </p>
              </div>
              <p class="text-sm text-muted-foreground/90 leading-relaxed mt-2">
                {exp.key}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Skills & Technologies -->
  <section class="mt-12 pt-12 border-t border-border/50">
    <div class="mb-6">
      <h2 class="text-2xl font-semibold mb-2">Skills & Technologies</h2>
      <p class="text-sm text-muted-foreground">
        Core competencies across systems administration, security, and infrastructure automation
      </p>
    </div>
    <ErrorBoundary client:load transition:persist="skills-error-boundary">
      <Skills client:load transition:persist="skills-section" />
    </ErrorBoundary>
  </section>

  <!-- Latest from the blog -->
  {latestPosts && latestPosts.length > 0 && (
    <section class="mt-12 pt-12 border-t border-border/50">
      <div class="mb-6 flex items-center justify-between">
        <div>
          <h2 class="text-2xl font-semibold mb-2">Latest from the blog</h2>
          <p class="text-sm text-muted-foreground">Recent insights and tutorials</p>
        </div>
        <Link 
          href="/blog" 
          class={buttonVariants({ variant: 'ghost' }) + ' hidden sm:flex items-center gap-1.5'}
        >
          View all
          <Icon name="lucide:arrow-right" class="size-4" />
        </Link>
      </div>
      
      <div class="space-y-2">
        {latestPosts.map((post) => (
          <article>
            <BlogCard entry={post} />
          </article>
        ))}
      </div>
      
      <!-- Apple-style pill button for mobile -->
      <div class="mt-6 sm:hidden flex justify-center">
        <Link
          href="/blog"
          aria-label="View all blog posts"
          class="inline-flex items-center justify-center px-6 py-3 rounded-full bg-muted/60 hover:bg-muted/80 text-sm font-semibold text-foreground transition-all duration-200 shadow-sm hover:shadow-md active:scale-[0.98]"
        >
          View All
        </Link>
      </div>
    </section>
  )}

  <!-- Premium Consulting Services Section -->
  <section class="mt-12 pt-12 border-t border-border/50">
    <!-- Header -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center justify-center px-4 py-1.5 rounded-full bg-primary/10 text-primary text-sm font-medium mb-6">
        <Icon name="lucide:sparkles" class="size-4 mr-2" />
        Infrastructure Consulting
      </div>
      <h2 class="text-3xl sm:text-4xl font-bold tracking-tight mb-4">
        Let's build something
        <span class="text-primary block mt-2">exceptional together</span>
      </h2>
      <p class="text-base sm:text-lg text-muted-foreground leading-relaxed max-w-2xl mx-auto">
        Whether you're scaling HPC clusters, securing enterprise networks, or automating your homelab—I help you build infrastructure that's robust, secure, and built to last.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid gap-6 sm:grid-cols-3 mb-12">
      <!-- Service Card 1: Linux Infrastructure -->
      <div class="group flex flex-col p-6 rounded-lg border bg-card transition-all duration-200 hover:border-primary/50 hover:shadow-md">
        <!-- Icon -->
        <div class="mb-4">
          <div class="inline-flex h-12 w-12 items-center justify-center rounded-lg bg-primary/5 text-primary mb-3">
            <Icon name="lucide:server" class="size-6" />
          </div>
          <h3 class="text-lg font-semibold mb-2">Linux Infrastructure</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            From bare metal to containers, I optimize and secure Linux systems at scale.
          </p>
        </div>
        
        <!-- Features List -->
        <ul class="space-y-2.5 mt-auto">
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>System hardening & security audits</span>
          </li>
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>Performance tuning & optimization</span>
          </li>
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>Docker & Kubernetes deployment</span>
          </li>
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>Backup & disaster recovery</span>
          </li>
        </ul>
      </div>

      <!-- Service Card 2: Network Security -->
      <div class="group flex flex-col p-6 rounded-lg border bg-card transition-all duration-200 hover:border-primary/50 hover:shadow-md">
        <!-- Icon -->
        <div class="mb-4">
          <div class="inline-flex h-12 w-12 items-center justify-center rounded-lg bg-primary/5 text-primary mb-3">
            <Icon name="lucide:shield" class="size-6" />
          </div>
          <h3 class="text-lg font-semibold mb-2">Network Security</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Secure your network with proper firewall policies, VPNs, and vulnerability assessments.
          </p>
        </div>
        
        <!-- Features List -->
        <ul class="space-y-2.5 mt-auto">
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>Firewall architecture & policies</span>
          </li>
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>Site-to-site VPN configuration</span>
          </li>
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>Vulnerability scanning & remediation</span>
          </li>
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>Network segmentation design</span>
          </li>
        </ul>
      </div>

      <!-- Service Card 3: Infrastructure Automation -->
      <div class="group flex flex-col p-6 rounded-lg border bg-card transition-all duration-200 hover:border-primary/50 hover:shadow-md">
        <!-- Icon -->
        <div class="mb-4">
          <div class="inline-flex h-12 w-12 items-center justify-center rounded-lg bg-primary/5 text-primary mb-3">
            <Icon name="lucide:workflow" class="size-6" />
          </div>
          <h3 class="text-lg font-semibold mb-2">Infrastructure Automation</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Transform manual processes into reliable, repeatable Infrastructure as Code.
          </p>
        </div>
        
        <!-- Features List -->
        <ul class="space-y-2.5 mt-auto">
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>Ansible & Terraform workflows</span>
          </li>
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>CI/CD pipeline implementation</span>
          </li>
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>Configuration management at scale</span>
          </li>
          <li class="flex items-start gap-2 text-sm text-muted-foreground">
            <Icon name="lucide:check" class="size-4 mt-0.5 shrink-0 text-primary" />
            <span>GitOps & Homelab as Code</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Trust Indicators -->
    <div class="grid grid-cols-2 sm:flex sm:flex-wrap sm:items-center sm:justify-center gap-6 sm:gap-8 mb-10 px-4 sm:px-6 py-6 rounded-lg bg-muted/30 border border-border/50">
      <div class="text-center">
        <div class="text-2xl sm:text-3xl font-bold text-foreground mb-1">9+</div>
        <div class="text-xs sm:text-sm text-muted-foreground">Years Experience</div>
      </div>
      <div class="hidden sm:block h-10 w-px bg-border/50" aria-hidden="true"></div>
      <div class="text-center">
        <div class="text-2xl sm:text-3xl font-bold text-foreground mb-1">400+</div>
        <div class="text-xs sm:text-sm text-muted-foreground">Servers Managed</div>
      </div>
      <div class="hidden sm:block h-10 w-px bg-border/50" aria-hidden="true"></div>
      <div class="text-center">
        <div class="text-2xl sm:text-3xl font-bold text-foreground mb-1">CCNA</div>
        <div class="text-xs sm:text-sm text-muted-foreground">Certified</div>
      </div>
      <div class="hidden sm:block h-10 w-px bg-border/50" aria-hidden="true"></div>
      <div class="text-center">
        <div class="text-2xl sm:text-3xl font-bold text-foreground mb-1">Enterprise</div>
        <div class="text-xs sm:text-sm text-muted-foreground">Security Experience</div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center pt-6 border-t border-border/30">
      <Link 
        href="mailto:hello@merox.dev?subject=Infrastructure Consulting Inquiry" 
        class="group inline-flex items-center gap-2.5 px-8 py-4 rounded-lg bg-foreground text-background text-base font-semibold hover:bg-foreground/90 transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 shadow-lg hover:shadow-xl hover:scale-[1.02] active:scale-[0.98]"
      >
        <Icon name="lucide:mail" class="size-5" />
        <span>Start a conversation</span>
        <Icon name="lucide:arrow-right" class="size-5 transition-transform group-hover:translate-x-1" />
      </Link>
      <p class="mt-4 text-sm text-muted-foreground">
        Typical response time: within 24 hours
      </p>
    </div>
  </section>
</Layout>