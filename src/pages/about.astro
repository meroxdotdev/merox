import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Link from '@/components/Link.astro'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { SITE } from '@/consts'

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Robert Melcher",
  "alternateName": "merox",
  "url": SITE.href,
  "image": new URL('/robert.webp', Astro.site).href,
  "jobTitle": "HPC System Administrator",
  "worksFor": { "@type": "Organization", "name": "Forvia" },
  "sameAs": [
    "https://github.com/meroxdotdev",
    "https://www.linkedin.com/in/robert-melcher-92a1a9157"
  ],
  "description": "System Administrator and former Cybersecurity Engineer with expertise in Linux-based technologies."
}
---

<Layout class="max-w-4xl">
  <PageHead slot="head" title="About | Robert Melcher" />
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:user' }]} />

  <section class="flex flex-col gap-12 pb-12">
    <div class="flex flex-col md:flex-row gap-8 md:gap-12 items-start">
      
      <div class="flex flex-col gap-4 shrink-0">
        <div class="size-32 md:size-40 rounded-2xl overflow-hidden border border-border/50 shadow-sm bg-muted/30">
          <img
            src="/robert.webp"
            alt="Robert Melcher"
            width="1492"
            height="1864"
            class="object-cover w-full h-full"
            loading="eager"
          />
        </div>

        <Link 
          href="/blog/homelab-tour" 
          class="group hidden md:flex flex-col gap-1.5 px-3 py-2.5 rounded-xl bg-primary/5 hover:bg-primary/10 border border-primary/10 hover:scale-[1.02] hover:shadow-sm transition-all duration-300 w-40"
        >
          <div class="flex items-center gap-2">
            <div class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
            </div>
            <span class="text-[10px] uppercase tracking-wider font-bold text-primary/80 leading-none">Active</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm font-semibold text-foreground">Homelab</span>
            <Icon name="lucide:arrow-up-right" class="size-3.5 opacity-50 group-hover:opacity-100 transition-opacity" />
          </div>
        </Link>
      </div>
      
      <div class="flex-1 min-w-0">
        <div class="space-y-6">
          <div class="space-y-4">
            <div>
              <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-foreground leading-tight">
                Robert Melcher
              </h2>
              <div class="mt-2">
                <div class="relative inline-flex items-center gap-1.5">
                  <p class="text-primary font-mono text-sm flex items-center gap-1.5">
                    <Icon name="lucide:terminal" class="size-4" />
                    <span>@merox</span>
                  </p>
                  <div class="relative group" id="username-origin-tooltip">
                    <button type="button" id="username-origin-btn" class="text-muted-foreground/40 hover:text-muted-foreground/70 transition-colors p-1" aria-label="Username origin">
                      <Icon name="lucide:info" class="size-3.5" />
                    </button>
                    <div id="username-origin-content" class="absolute left-0 md:left-1/2 md:-translate-x-1/2 top-full mt-2 z-50 w-64 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 pointer-events-none group-hover:pointer-events-auto" role="tooltip">
                      <div class="bg-popover border border-border/60 rounded-lg shadow-xl p-3 text-xs space-y-2 backdrop-blur-sm">
                        <p class="font-semibold text-foreground">Username origin</p>
                        <p class="text-muted-foreground leading-relaxed">Combined <span class="font-mono text-foreground">me</span> (Melcher) + <span class="font-mono text-foreground">ro</span> (Robert) + <span class="font-mono text-foreground">x</span>. <span class="font-mono text-foreground">0x39</span> (hex) = 57 (5/7).</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="flex items-center gap-1.5 mt-3 text-sm text-muted-foreground">
                <Icon name="lucide:map-pin" class="size-4" />
                <span>TimiÈ™oara, Romania</span>
                <span class="text-base">ðŸ‡·ðŸ‡´</span>
              </div>
            </div>
          </div>

          <div class="space-y-4">
            <p class="text-base md:text-lg text-muted-foreground leading-relaxed">
              I'm a seasoned <strong class="text-foreground font-semibold">HPC System Administrator</strong> currently building large-scale infrastructure at <strong class="text-foreground font-semibold">Forvia</strong>. With a background in cybersecurity engineering and deep roots in Linux systems, I bridge the gap between performance and security.
            </p>
            <p class="text-base text-muted-foreground leading-relaxed">
               My work focuses on <strong class="text-foreground font-medium italic">building things that scale, keeping them simple enough to understand.</strong>
            </p>
          </div>

          <div class="flex flex-wrap gap-3 pt-2">
            <Link href="/robert-melcher-cv.pdf" external class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-foreground text-background text-sm font-semibold hover:bg-foreground/90 transition-colors">
              <Icon name="lucide:file-text" class="size-4" />
              <span>Download CV</span>
            </Link>
            <Link href="https://github.com/meroxdotdev" external class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg border border-border bg-card text-foreground text-sm font-semibold hover:bg-muted transition-colors">
              <Icon name="lucide:github" class="size-4" />
              <span>GitHub</span>
            </Link>
          </div>
        </div>
      </div>
    </div>

    <!-- Homelab CTA for Mobile -->
    <Link 
      href="/blog/homelab-tour" 
      class="group md:hidden flex items-center justify-between gap-4 p-4 rounded-xl bg-primary/5 hover:bg-primary/10 border border-primary/10 hover:shadow-sm transition-all duration-300"
    >
      <div class="flex items-center gap-3">
        <div class="flex size-10 shrink-0 items-center justify-center rounded-lg bg-background border border-border/50">
          <Icon name="lucide:server" class="size-5 text-primary" />
        </div>
        <div class="flex flex-col gap-0.5">
          <div class="flex items-center gap-2">
            <span class="text-sm font-semibold text-foreground">Homelab Tour</span>
            <div class="relative flex h-1.5 w-1.5">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-green-500"></span>
            </div>
          </div>
          <span class="text-xs text-muted-foreground">Infrastructure sandbox</span>
        </div>
      </div>
      <Icon name="lucide:arrow-right" class="size-5 text-primary opacity-50 group-hover:opacity-100 group-hover:translate-x-1 transition-all" />
    </Link>
  </section>
</Layout>
