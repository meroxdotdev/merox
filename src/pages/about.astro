---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Link from '@/components/Link.astro'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { SITE } from '@/consts'
// 1. ImportÄƒ componenta de imagine È™i resursa
import { Image } from 'astro:assets'
import robertImg from '../assets/robert.webp' 

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Robert Melcher",
  "alternateName": "merox",
  "url": SITE.href,
  "image": new URL('/robert.webp', Astro.site).href,
  "jobTitle": "HPC System Administrator",
  "worksFor": { "@type": "Organization", "name": "Forvia" },
  "alumniOf": { "@type": "EducationalOrganization", "name": "West University of TimiÈ™oara" },
  "hasCredential": {
    "@type": "EducationalOccupationalCredential",
    "credentialCategory": "Professional Certification",
    "recognizedBy": { "@type": "Organization", "name": "Cisco" },
    "name": "CCNA"
  },
  "sameAs": [
    "https://github.com/meroxdotdev",
    "https://www.linkedin.com/in/robert-melcher-92a1a9157"
  ],
  "email": "hello@merox.dev",
  "description": "System Administrator and former Cybersecurity Engineer with expertise in Linux-based technologies, networking, and security."
}
---

<Layout class="max-w-4xl">
  <PageHead slot="head" title="About | Robert Melcher" />
  
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:user' }]} />

  <section class="flex flex-col gap-16 pb-12">
    <div class="flex flex-col md:flex-row gap-8 md:gap-12 items-start">
      <div class="relative shrink-0">
        <div class="size-32 md:size-40 rounded-2xl overflow-hidden border border-border/50 shadow-sm bg-muted/30">
          <Image
            src={robertImg}
            alt="Robert Melcher"
            width={320} 
            height={320}
            loading="eager"
            fetchpriority="high"
            class="object-cover w-full h-full transition-transform duration-300 hover:scale-[1.05]"
          />
        </div>
      </div>
      
      <div class="flex-1 min-w-0">
        <div class="space-y-6">
          <div class="space-y-4">
            <div>
              <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-foreground leading-tight">
                Robert Melcher
              </h2>
              <div class="mt-2">
                <div class="relative inline-flex items-center gap-1.5">
                  <p class="text-primary font-mono text-sm flex items-center gap-1.5">
                    <Icon name="lucide:terminal" class="size-4" />
                    <span>@merox</span>
                  </p>
                  <div class="relative group" id="username-origin-tooltip">
                    <button
                      type="button"
                      id="username-origin-btn"
                      class="text-muted-foreground/50 md:text-muted-foreground/40 hover:text-muted-foreground/70 active:text-muted-foreground/80 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary/50 rounded-full p-1 md:p-0.5 bg-muted/30 md:bg-transparent"
                      aria-label="Username origin"
                      aria-expanded="false"
                    >
                      <Icon name="lucide:info" class="size-4 md:size-3.5" />
                    </button>
                    <div 
                      id="username-origin-content"
                      class="absolute left-0 md:left-1/2 md:-translate-x-1/2 top-full mt-2 z-50 w-[calc(100vw-2rem)] max-w-72 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 pointer-events-none group-hover:pointer-events-auto data-[open]:opacity-100 data-[open]:visible data-[open]:pointer-events-auto"
                      role="tooltip"
                    >
                      <div class="bg-popover border border-border/60 rounded-lg shadow-xl p-3 md:p-4 text-xs space-y-1.5 md:space-y-2 backdrop-blur-sm">
                        <p class="font-semibold text-foreground">Username origin</p>
                        <p class="text-muted-foreground leading-relaxed">
                          Combined <span class="font-mono text-foreground">me</span> (Melcher) + <span class="font-mono text-foreground">ro</span> (Robert) + <span class="font-mono text-foreground">x</span> from <span class="font-mono text-foreground">mer0x39</span>. <span class="font-mono text-foreground">0x39</span> (hex) = 57, representing birth date 5/7.
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <script>
                (function() {
                  const btn = document.getElementById('username-origin-btn');
                  const tooltip = document.getElementById('username-origin-content');
                  const container = document.getElementById('username-origin-tooltip');
                  
                  if (!btn || !tooltip || !container) return;
                  let isOpen = false;
                  function toggleTooltip() {
                    isOpen = !isOpen;
                    tooltip!.setAttribute('data-open', isOpen ? 'true' : '');
                    btn!.setAttribute('aria-expanded', isOpen.toString());
                  }
                  function closeTooltip() {
                    if (isOpen) {
                      isOpen = false;
                      tooltip!.removeAttribute('data-open');
                      btn!.setAttribute('aria-expanded', 'false');
                    }
                  }
                  btn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    toggleTooltip();
                  });
                  document.addEventListener('click', (e) => {
                    const target = e.target;
                    if (target && container!.contains(target as Node)) return;
                    closeTooltip();
                  });
                  document.addEventListener('keydown', (e) => {
                    if (e.key === 'Escape' && isOpen) closeTooltip();
                  });
                })();
              </script>
              <Link 
                href="/blog/homelab-tour" 
                class="group inline-flex items-center gap-1.5 mt-1.5 text-sm text-muted-foreground hover:text-foreground transition-colors"
              >
                <Icon name="lucide:server" class="size-4 text-primary" />
                <span>Homelab</span>
                <span class="relative flex h-1.5 w-1.5">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-green-500"></span>
                </span>
                <Icon name="lucide:chevron-right" class="size-3 opacity-0 -ml-1 group-hover:opacity-100 group-hover:ml-0 transition-all" />
              </Link>
              <div class="flex items-center gap-1.5 mt-2 text-sm text-muted-foreground">
                <Icon name="lucide:map-pin" class="size-4" />
                <span>TimiÈ™oara, Romania</span>
                <span class="text-base">ðŸ‡·ðŸ‡´</span>
              </div>
            </div>
          </div>

          <div class="space-y-4">
            <p class="text-base md:text-lg text-muted-foreground leading-relaxed">
              I'm a seasoned <strong class="text-foreground font-semibold">HPC System Administrator</strong> currently building large-scale infrastructure at <strong class="text-foreground font-semibold">Forvia</strong>. With a background in cybersecurity engineering and deep roots in Linux systems, I bridge the gap between performance and security.
            </p>
            <p class="text-base text-muted-foreground leading-relaxed">
              I specialize in <strong class="text-foreground font-medium">HPC clusters</strong>, <strong class="text-foreground font-medium">Linux infrastructure</strong>, and <strong class="text-foreground font-medium">network security</strong>. My professional journey is driven by a simple philosophy: <strong class="text-foreground font-medium italic">Build things that scale, but keep them simple enough to understand.</strong>
            </p>
          </div>

          <div class="flex flex-wrap gap-3 pt-2">
            <Link 
              href="/robert-melcher-cv.pdf" 
              external 
              class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-foreground text-background text-sm font-semibold hover:bg-foreground/90 transition-colors"
            >
              <Icon name="lucide:file-text" class="size-4" />
              <span>Download CV</span>
            </Link>
            <Link 
              href="https://github.com/meroxdotdev" 
              external 
              class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg border border-border bg-card text-foreground text-sm font-semibold hover:bg-muted transition-colors"
            >
              <Icon name="lucide:github" class="size-4" />
              <span>GitHub</span>
            </Link>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>