---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Link from '@/components/Link.astro'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import { SITE } from '@/consts'

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Robert Melcher",
  "url": SITE.href,
  "jobTitle": "HPC System Administrator",
  "worksFor": { "@type": "Organization", "name": "Forvia" }
}
---

<Layout class="max-w-4xl">
  <PageHead slot="head" title="About | Robert Melcher" />
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:user' }]} />

  <section class="flex flex-col gap-16 pb-12">
    <div class="flex flex-col md:flex-row gap-8 md:gap-12 items-start">
      
      <div class="flex flex-row md:flex-col items-center gap-4 md:gap-5 shrink-0 group">
        <div class="relative">
          <div class="size-24 md:size-40 rounded-2xl overflow-hidden border border-border/50 bg-muted/30 shadow-sm transition-all duration-500 group-hover:border-primary/30">
            <img
              src="/robert.webp"
              alt="Robert Melcher"
              class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
              loading="eager"
            />
          </div>
          <div class="absolute -bottom-1 -right-1 size-4 rounded-full bg-background flex items-center justify-center md:hidden">
            <span class="size-2 rounded-full bg-green-500 animate-pulse"></span>
          </div>
        </div>

        <Link 
          href="/blog/homelab-tour" 
          class="flex flex-col gap-1 px-1 md:w-full group/lab"
        >
          <div class="flex items-center gap-2">
            <span class="hidden md:flex relative h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
            </span>
            <span class="text-[10px] font-black uppercase tracking-[0.15em] text-muted-foreground/60 group-hover/lab:text-primary transition-colors">
              Node: Homelab
            </span>
          </div>
          <div class="flex items-center justify-between group-hover/lab:translate-x-1 transition-transform duration-300">
            <span class="text-sm font-medium text-foreground/80">View Infrastructure</span>
            <Icon name="lucide:chevron-right" class="size-3.5 text-muted-foreground group-hover/lab:text-primary" />
          </div>
          <div class="h-[2px] w-full bg-border/40 mt-1 overflow-hidden">
             <div class="h-full bg-primary/40 w-1/3 group-hover/lab:w-full transition-all duration-700"></div>
          </div>
        </Link>
      </div>
      
      <div class="flex-1 min-w-0">
        <div class="space-y-6">
          <div class="space-y-4">
            <div>
              <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-foreground leading-tight">
                Robert Melcher
              </h2>
              <div class="mt-2 flex items-center gap-3">
                <p class="text-primary font-mono text-sm flex items-center gap-1.5">
                  <Icon name="lucide:terminal" class="size-4" />
                  <span>@merox</span>
                </p>
                <div class="h-4 w-[1px] bg-border/60"></div>
                <div class="flex items-center gap-1.5 text-sm text-muted-foreground">
                  <Icon name="lucide:map-pin" class="size-3.5" />
                  <span>Timi»ôoara</span>
                </div>
              </div>
            </div>
          </div>

          <div class="space-y-4 max-w-2xl">
            <p class="text-base md:text-lg text-muted-foreground leading-relaxed">
              I'm a seasoned <strong class="text-foreground font-semibold">HPC System Administrator</strong> building large-scale infrastructure at <strong class="text-foreground font-semibold">Forvia</strong>. I bridge the gap between high-performance computing and iron-clad security.
            </p>
            <p class="text-base text-muted-foreground leading-relaxed">
              My philosophy is simple: <span class="text-foreground/80 italic italic underline decoration-primary/20 decoration-2 underline-offset-4">"Build for scale, design for clarity."</span>
            </p>
          </div>

          <div class="flex flex-wrap gap-3 pt-4">
            <Link 
              href="/robert-melcher-cv.pdf" 
              external 
              class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-foreground text-background text-sm font-semibold hover:opacity-90 transition-all active:scale-95"
            >
              <Icon name="lucide:file-text" class="size-4" />
              <span>Resume</span>
            </Link>
            <Link 
              href="https://github.com/meroxdotdev" 
              external 
              class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full border border-border bg-transparent text-foreground text-sm font-semibold hover:bg-muted transition-all active:scale-95"
            >
              <Icon name="lucide:github" class="size-4" />
              <span>GitHub</span>
            </Link>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
