---
import Layout from '@/layouts/Layout.astro'
import PageHead from '@/components/PageHead.astro'
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Newsletter from '@/components/react/Newsletter'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
---

<Layout class="max-w-4xl">
  <PageHead slot="head" title="Newsletter Subscription" />
  <Breadcrumbs items={[{ label: 'Newsletter', icon: 'lucide:mail' }]} />

  <div class="flex flex-col items-center justify-center min-h-[60vh] px-4 py-12">
    <div class="w-full max-w-md space-y-8">
      <div class="text-center space-y-4">
        <h1 class="text-3xl md:text-4xl font-black tracking-tighter uppercase leading-none text-foreground">
          Stay <span class="text-primary">Connected</span>
        </h1>
        <p class="text-base md:text-lg text-muted-foreground leading-relaxed">
          Get the latest insights on infrastructure, Kubernetes, and DevOps delivered to your inbox.
        </p>
      </div>
      
      <ErrorBoundary client:load>
        <Newsletter client:load />
      </ErrorBoundary>
    </div>
  </div>
</Layout>
