---
import ToolLayout from '@/layouts/ToolLayout.astro'
import YAMLValidatorComponent from '@/components/react/YAMLValidator'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { SITE } from '@/consts'

const pageUrl = new URL(Astro.url.pathname, Astro.site).href
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "YAML Validator & Formatter",
  "description": "Free online YAML validator, formatter, and converter. Validate YAML syntax, format YAML files, and convert between YAML and JSON formats.",
  "url": pageUrl,
  "applicationCategory": "UtilityApplication",
  "operatingSystem": "Any",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "featureList": [
    "Validate YAML syntax with error reporting",
    "Format YAML with proper indentation",
    "Convert YAML to JSON",
    "Convert JSON to YAML",
    "Real-time validation and conversion",
    "One-click copy to clipboard",
    "100% client-side processing"
  ]
}
---

<ToolLayout
  title="YAML Validator & Formatter"
  description="Validate, format, and convert YAML files instantly. 100% client-side, privacy-focused."
  toolName="YAML Validator & Formatter"
  toolIcon="lucide:file-code"
  structuredData={structuredData}
>
  <YAMLValidatorComponent client:load />
</ToolLayout>


