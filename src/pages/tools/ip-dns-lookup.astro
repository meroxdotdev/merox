---
import ToolLayout from '@/layouts/ToolLayout.astro'
import IPDNSLookupComponent from '@/components/react/IPDNSLookup'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { SITE } from '@/consts'

const pageUrl = new URL(Astro.url.pathname, Astro.site).href
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "IP & DNS Lookup",
  "description": "Free online IP address geolocation and DNS lookup tool. Lookup IP location, ISP information, and DNS records.",
  "url": pageUrl,
  "applicationCategory": "UtilityApplication",
  "operatingSystem": "Any",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "featureList": [
    "IP geolocation lookup",
    "DNS record lookup (A, AAAA, MX, TXT, CNAME, NS)",
    "ISP and organization information",
    "Get your own IP address",
    "Real-time results"
  ]
}
---

<ToolLayout
  title="IP & DNS Lookup"
  description="Lookup IP address geolocation information and DNS records instantly. All-in-one network diagnostic tool."
  toolName="IP & DNS Lookup"
  toolIcon="lucide:search"
  structuredData={structuredData}
>
  <IPDNSLookupComponent client:load />
</ToolLayout>


