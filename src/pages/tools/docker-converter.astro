---
import ToolLayout from '@/layouts/ToolLayout.astro'
import DockerConverterComponent from '@/components/react/DockerConverter'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { SITE } from '@/consts'

const pageUrl = new URL(Astro.url.pathname, Astro.site).href
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Docker Run to Compose Converter",
  "description": "Free online tool to convert docker run commands to Docker Compose YAML format.",
  "url": pageUrl,
  "applicationCategory": "UtilityApplication",
  "operatingSystem": "Any",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "featureList": [
    "Convert docker run commands to Docker Compose",
    "Parse ports, volumes, environment variables",
    "Support for all common docker run flags",
    "Generate valid docker-compose.yml files",
    "Real-time conversion",
    "One-click copy to clipboard",
    "100% client-side processing"
  ]
}
---

<ToolLayout
  title="Docker Run to Compose Converter"
  description="Transform your docker run commands into Docker Compose YAML files instantly."
  toolName="Docker Run to Compose"
  toolIcon="lucide:container"
  structuredData={structuredData}
>
  <DockerConverterComponent client:load />
</ToolLayout>


