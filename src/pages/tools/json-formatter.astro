---
import ToolLayout from '@/layouts/ToolLayout.astro'
import JSONFormatterComponent from '@/components/react/JSONFormatter'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { SITE } from '@/consts'

const pageUrl = new URL(Astro.url.pathname, Astro.site).href
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "JSON Formatter & Validator",
  "description": "Free online JSON formatter, validator, and minifier. Format, validate, and minify JSON strings instantly.",
  "url": pageUrl,
  "applicationCategory": "UtilityApplication",
  "operatingSystem": "Any",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "featureList": [
    "Format JSON with customizable indentation",
    "Minify JSON to reduce file size",
    "Validate JSON syntax with error reporting",
    "Real-time formatting and validation",
    "One-click copy to clipboard",
    "100% client-side processing"
  ]
}
---

<ToolLayout
  title="JSON Formatter & Validator"
  description="Format, validate, and minify JSON strings instantly. 100% client-side processing."
  toolName="JSON Formatter & Validator"
  toolIcon="lucide:braces"
  structuredData={structuredData}
>
  <JSONFormatterComponent client:load />
</ToolLayout>


