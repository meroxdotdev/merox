---
import ToolLayout from '@/layouts/ToolLayout.astro'
import SubnetCalculatorComponent from '@/components/react/SubnetCalculator'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { SITE } from '@/consts'

const pageUrl = new URL(Astro.url.pathname, Astro.site).href
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Subnet Calculator",
  "description": "Free online subnet calculator for network administrators. Calculate subnet masks, network addresses, broadcast addresses, usable IP ranges, and CIDR notation instantly.",
  "url": pageUrl,
  "applicationCategory": "UtilityApplication",
  "operatingSystem": "Any",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "featureList": [
    "Calculate network and broadcast addresses",
    "CIDR notation support",
    "Subnet mask conversion",
    "Binary representation",
    "IP class identification",
    "Host count calculation"
  ]
}
---

<ToolLayout
  title="Subnet Calculator"
  description="Calculate subnet masks, network addresses, broadcast addresses, and usable IP ranges instantly. 100% client-side."
  toolName="Subnet Calculator"
  toolIcon="lucide:network"
  structuredData={structuredData}
>
  <SubnetCalculatorComponent client:load />
</ToolLayout>


