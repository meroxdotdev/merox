---
import ToolLayout from '@/layouts/ToolLayout.astro'
import PasswordTool from '@/components/react/PasswordTool'
import { ErrorBoundary } from '@/components/react/ErrorBoundary'
import { SITE } from '@/consts'

const pageUrl = new URL(Astro.url.pathname, Astro.site).href
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Password Generator",
  "description": "Free online password generator and strength checker. Generate secure, random passwords and check strength instantly.",
  "url": pageUrl,
  "applicationCategory": "UtilityApplication",
  "operatingSystem": "Any",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "featureList": [
    "Cryptographically secure random password generation",
    "Real-time password strength analysis",
    "Customizable length and character types",
    "100% client-side processing",
    "No data sent to servers"
  ]
}
---

<ToolLayout
  title="Password Generator"
  description="Generate secure, random passwords and check their strength instantly. 100% client-side."
  toolName="Password Generator"
  toolIcon="lucide:key"
  structuredData={structuredData}
>
  <PasswordTool client:load />
</ToolLayout>


