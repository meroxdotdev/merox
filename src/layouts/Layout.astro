---
import '@/styles/global.css'
import '@/styles/typography.css'

import FloatingSidebar from '@/components/FloatingSidebar.astro'
import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'

interface Props {
  class?: string
  hideFloatingSidebar?: boolean
}

const { class: className, hideFloatingSidebar = false } = Astro.props
---

<!doctype html>
<html
  class="bg-background text-foreground scheme-light-dark"
  lang={SITE.locale}
>
  <Head>
    <slot name="head" />
  </Head>
  <body class="flex h-fit min-h-screen flex-col gap-y-6 font-sans">
    <!-- Skip to main content link for accessibility -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-primary focus:text-primary-foreground focus:rounded-md focus:shadow-lg focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2"
      aria-label="Skip to main content"
    >
      Skip to main content
    </a>
    
    <!-- Prevent navigation to same page to avoid refresh flicker -->
    <script is:inline>
      (function() {
        // Prevent multiple initializations
        if (window.__preventSamePageNavInitialized) return
        window.__preventSamePageNavInitialized = true
        
        let clickHandler = null
        let touchStartHandler = null
        let touchEndHandler = null
        
        function normalizePath(path) {
          if (!path) return '/'
          return path.split('#')[0].replace(/\/$/, '') || '/'
        }
        
        function shouldPreventNavigation(link) {
          if (!link) return false
          
          const href = link.getAttribute('href')
          if (!href) return false
          
          // Skip external links
          if (href.startsWith('http') || href.startsWith('mailto:') || href.startsWith('tel:')) {
            return false
          }
          
          const currentPath = normalizePath(window.location.pathname)
          const targetPath = normalizePath(href)
          
          // Prevent navigation if already on the same page (allow hash links)
          return currentPath === targetPath && !href.includes('#')
        }
        
        function initPreventNavigation() {
          // Remove existing handlers if they exist
          cleanup()
          
          // Create new handlers with current context
          clickHandler = function(e) {
            const link = e.target.closest('a[data-internal-link="true"]')
            if (!link) return
            
            if (shouldPreventNavigation(link)) {
              e.preventDefault()
              e.stopPropagation()
              e.stopImmediatePropagation()
              return false
            }
          }
          
          touchStartHandler = function(e) {
            const link = e.target.closest('a[data-internal-link="true"]')
            if (!link) return
            
            if (shouldPreventNavigation(link)) {
              e.preventDefault()
              e.stopPropagation()
              e.stopImmediatePropagation()
              return false
            }
          }
          
          touchEndHandler = function(e) {
            const link = e.target.closest('a[data-internal-link="true"]')
            if (link && shouldPreventNavigation(link)) {
              e.preventDefault()
              e.stopPropagation()
              e.stopImmediatePropagation()
            }
          }
          
          // Handle both click and touch events for mobile support
          // Use capture phase to intercept before Astro's view transitions
          // Touch events need to be non-passive to allow preventDefault
          document.addEventListener('click', clickHandler, true)
          document.addEventListener('touchstart', touchStartHandler, { passive: false, capture: true })
          document.addEventListener('touchend', touchEndHandler, { passive: false, capture: true })
        }
        
        function cleanup() {
          if (clickHandler) {
            document.removeEventListener('click', clickHandler, true)
            clickHandler = null
          }
          if (touchStartHandler) {
            document.removeEventListener('touchstart', touchStartHandler, true)
            touchStartHandler = null
          }
          if (touchEndHandler) {
            document.removeEventListener('touchend', touchEndHandler, true)
            touchEndHandler = null
          }
        }
        
        // Handler for page navigation
        function handlePageLoad() {
          cleanup()
          initPreventNavigation()
        }
        
        // Initialize on page load
        initPreventNavigation()
        
        // Reinitialize after each navigation (only once per navigation)
        // Use page-load which fires once after navigation completes
        document.addEventListener('astro:page-load', handlePageLoad)
        
        // Clean up before swap
        document.addEventListener('astro:before-swap', cleanup)
      })()
    </script>
    <header
      class="bg-background/50 sticky top-0 z-50 backdrop-blur-sm xl:backdrop-blur-none xl:bg-transparent divide-y divide-border xl:divide-none"
    >
      <Header />
      <slot name="subposts-navigation" />
      <slot name="table-of-contents" />
    </header>
    <main
      id="main-content"
      class={cn('w-full mx-auto flex grow flex-col gap-y-6 px-4', className)}
      tabindex="-1"
    >
      <slot />
    </main>
    {false && !hideFloatingSidebar && <FloatingSidebar />}
    <Footer />
  </body>
</html>