---
import { Separator } from '@/components/ui/separator'
import { SOCIAL_LINKS } from '@/consts'
import SocialIcons from './SocialIcons.astro'
import Newsletter from './react/Newsletter'
import { ErrorBoundary } from './react/ErrorBoundary'

// Hide newsletter on confirmed page, homepage, privacy, and terms pages
const pathname = Astro.url.pathname
const isConfirmedPage = pathname.includes('/newsletter/confirmed')
const isHomepage = pathname === '/' || pathname === '' || pathname === '/index.html' || pathname.startsWith('/index')
const isPrivacyPage = pathname === '/privacy'
const isTermsPage = pathname === '/terms'
const shouldHideNewsletter = isConfirmedPage || isHomepage || isPrivacyPage || isTermsPage
---

<footer class="mx-auto mb-8 w-full max-w-3xl px-4 sm:mb-4">
  {!shouldHideNewsletter && (
  <!-- Modern Newsletter Section - 2025 Design -->
  <div class="mb-6 rounded-2xl border border-border/50 bg-card/50 backdrop-blur-xl p-8 md:p-10 shadow-sm">
    <div class="mx-auto max-w-2xl">
      <div class="text-center mb-6">
        <h3 class="text-2xl md:text-3xl font-semibold mb-2 tracking-tight">
          Newsletter
        </h3>
        <p class="text-muted-foreground text-sm md:text-base max-w-lg mx-auto leading-relaxed">
          Get the latest posts about infrastructure, HPC, Kubernetes, and DevOps delivered to your inbox.
        </p>
      </div>
      
      <div class="max-w-md mx-auto">
        <ErrorBoundary client:load>
          <Newsletter client:load variant="compact" />
        </ErrorBoundary>
      </div>
    </div>
  </div>
  )}

  <div class="relative overflow-hidden rounded-xl border border-primary/20 bg-gradient-to-br from-primary/5 via-primary/3 to-transparent backdrop-blur-sm">
    <!-- Subtle gradient orbs -->
    <div class="absolute -top-10 -left-10 w-24 h-24 bg-primary/10 rounded-full blur-2xl"></div>
    <div class="absolute -bottom-10 -right-10 w-24 h-24 bg-primary/5 rounded-full blur-2xl"></div>

    <div class="relative z-10 p-6 flex flex-col items-center justify-center gap-3 sm:flex-row sm:justify-between">
      <div class="flex flex-wrap items-center justify-center gap-x-2.5 text-center text-sm text-muted-foreground">
        <span>
          &copy; {new Date().getFullYear()} Robert Melcher.
        </span>
        <span class="hidden sm:inline">·</span>
        <a href="/privacy" class="hover:text-foreground transition-colors">
          Privacy
        </a>
        <span>·</span>
        <a href="/terms" class="hover:text-foreground transition-colors">
          Terms
        </a>
      </div>
      <SocialIcons links={SOCIAL_LINKS} />
    </div>
  </div>
</footer>
