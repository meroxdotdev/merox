---
import { SOCIAL_LINKS, NAV_LINKS } from '@/consts'
import SocialIcons from './SocialIcons.astro'
import Link from '@/components/Link.astro'
import Newsletter from './react/Newsletter'
import { ErrorBoundary } from './react/ErrorBoundary'
import { Icon } from 'astro-icon/components'
---

<footer class="bg-background/80 border-t border-border/50 backdrop-blur-md">
  <div class="mx-auto max-w-3xl px-4 py-12 md:py-16">
    <div class="flex flex-col gap-12">
      <!-- Newsletter Section -->
      <div class="space-y-4">
        <h2 class="text-2xl font-black tracking-tighter uppercase leading-none text-foreground text-center">
          Stay <span class="text-primary">Updated</span>.
        </h2>
        <p class="text-sm text-muted-foreground leading-relaxed text-center max-w-xl mx-auto">
          Get the latest posts about infrastructure, Kubernetes, and DevOps delivered to your inbox.
        </p>
        <ErrorBoundary client:load>
          <Newsletter client:load />
        </ErrorBoundary>
      </div>

      <!-- Main Footer Content -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 border-t border-border/50 pt-12">
        <!-- Navigation -->
        <div class="space-y-3">
          <h4 class="text-sm font-bold text-foreground">Navigation</h4>
          <nav class="flex flex-col gap-2">
            {NAV_LINKS.map((item) => {
              const isExternal = item.href.startsWith('http')
              const isInsideLink = item.label.toLowerCase() === 'inside'
              return (
                <Link 
                  href={item.href}
                  external={isExternal}
                  class={isInsideLink 
                    ? "text-sm text-primary hover:text-primary/80 capitalize transition-colors flex items-center gap-1.5 group font-medium" 
                    : "text-sm text-muted-foreground hover:text-primary capitalize transition-colors flex items-center gap-1.5 group"}
                >
                  <span>{item.label}</span>
                  {isExternal && (
                    <Icon 
                      name="lucide:external-link" 
                      class={isInsideLink 
                        ? "size-3 opacity-80 flex-shrink-0 text-primary group-hover:opacity-100 transition-opacity" 
                        : "size-3 opacity-70 flex-shrink-0 group-hover:opacity-100 group-hover:text-primary transition-colors"} 
                      aria-hidden="true"
                    />
                  )}
                </Link>
              )
            })}
          </nav>
        </div>

        <!-- Legal -->
        <div class="space-y-3">
          <h4 class="text-sm font-bold text-foreground">Legal</h4>
          <nav class="flex flex-col gap-2">
            <Link href="/privacy" class="text-sm text-muted-foreground hover:text-primary transition-colors">
              Privacy Policy
            </Link>
            <Link href="/terms" class="text-sm text-muted-foreground hover:text-primary transition-colors">
              Terms of Service
            </Link>
          </nav>
        </div>

        <!-- Connect -->
        <div class="space-y-3">
          <h4 class="text-sm font-bold text-foreground">Connect</h4>
          <SocialIcons links={SOCIAL_LINKS} />
        </div>
      </div>

      <!-- Bottom Section -->
      <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 border-t border-border/50 pt-8 text-sm text-muted-foreground">
        <div>
          &copy; {new Date().getFullYear()} Merox. All rights reserved.
        </div>
        <div class="text-xs">
          Theme: <a href="https://github.com/meroxdotdev/merox-erudite" target="_blank" rel="noopener noreferrer" class="hover:text-primary transition-colors underline">merox-erudite</a>
        </div>
      </div>
    </div>
  </div>
</footer>