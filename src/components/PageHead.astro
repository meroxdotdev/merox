---
import { SITE } from '@/consts'

interface Props {
  title?: string
  description?: string
  noindex?: boolean
}

const {
  title = SITE.title,
  description = SITE.description,
  noindex = false,
} = Astro.props
const image = new URL('/static/1200x630.png', Astro.site)
---

<!-- Minimal head helpers to avoid duplicates with Head.astro -->
{(() => {
  const docTitle = title && title !== SITE.title ? `${title} | ${SITE.title}` : SITE.title
  return <title>{docTitle}</title>
})()}
{noindex && <meta name="robots" content="noindex, nofollow" />}
