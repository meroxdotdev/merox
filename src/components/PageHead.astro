---
import { SITE } from '@/consts'

interface Props {
  title?: string
  description?: string
  noindex?: boolean
  fullTitle?: boolean // If true, use title as-is without appending site name
}

const {
  title = SITE.title,
  description,
  noindex = false,
  fullTitle = false,
} = Astro.props
---

<!-- Minimal head helpers to avoid duplicates with Head.astro -->
{(() => {
  const docTitle = fullTitle
    ? title
    : title && title !== SITE.title
      ? `${title} - ${SITE.title}`
      : SITE.title
  return <title>{docTitle}</title>
})()}
{noindex && <meta name="robots" content="noindex, nofollow" />}
